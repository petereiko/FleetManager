@using FleetManager.Business.DataObjects.VehicleDto
@model VehicleIndexViewModel
@{
    var roles = (User.FindFirst("Roles")?.Value ?? "")
        .Split(',', StringSplitOptions.RemoveEmptyEntries)
        .Select(r => r.Trim());
    bool isGlobal = roles.Contains("Company Owner") || roles.Contains("Super Admin");
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h3 class="page-title">Vehicles</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><i class="feather-chevron-right"></i></li>
                    <li class="breadcrumb-item active">Vehicle List</li>
                </ul>
            </div>
            <div class="col-sm-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="feather-plus"></i> Add Vehicle
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-3 align-items-end">
            @if (isGlobal)
            {
                <div class="col-md-3">
                    <label class="form-label">Branch</label>
                    <select class="form-select" asp-for="Filter.BranchId" asp-items="ViewBag.Branches">
                        <option value="">All Branches</option>
                    </select>
                </div>
            }
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" asp-for="Filter.Status" asp-items="ViewBag.Statuses">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Type</label>
                <select class="form-select" asp-for="Filter.Type" asp-items="ViewBag.VehicleTypes">
                    <option value="">All Types</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="feather-filter me-1"></i> Filter
                </button>
            </div>
        </div>
    </form>

