@using FleetManager.Business.ViewModels
@model IEnumerable<FuelLogListItemViewModel>
@{
    ViewData["Title"] = "Fuel Logs & Expenses";
    var totalCost = Model?.Sum(x => x.Cost) ?? 0;
    var totalVolume = Model?.Sum(x => x.Volume) ?? 0;
    var logCount = Model?.Count() ?? 0;
}

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
    }

    .card {
        transition: all 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .dropdown-menu {
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }

    /* Fixed table container height */
    .table-container {
        min-height: 500px;
        max-height: 800px;
        overflow-y: auto;
    }

    /* Custom scrollbar */
    .table-container::-webkit-scrollbar {
        width: 6px;
    }

    .table-container::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

    .table-container::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }

    /* Modal styling */
    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom: none;
    }

    .modal-header .btn-close {
        filter: invert(1);
    }

    /* Custom delete confirmation dialog */
    .swal2-popup {
        border-radius: 15px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.15);
    }

    .swal2-title {
        color: #dc3545;
        font-weight: 600;
    }

    .swal2-icon.swal2-warning {
        border-color: #dc3545;
        color: #dc3545;
    }

    /* Empty state styling */
    .empty-state {
        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Filter results styling */
    .filter-results {
        background: #f8f9fa;
        border-left: 4px solid #0d6efd;
        padding: 10px 15px;
        margin-bottom: 15px;
        border-radius: 0 8px 8px 0;
    }
</style>

<!-- SweetAlert2 & Flatpickr CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.css" rel="stylesheet">

<div class="content">
    <!-- Page Header with Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="fw-bold text-dark mb-1">Fuel Logs & Expenses</h2>
                    <p class="text-muted mb-0">Track and manage fuel consumption across your fleet</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="feather-plus me-2"></i>Add New Log
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="feather-file-text display-6"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1 text-white-50">Total Logs</h6>
                            <h3 class="mb-0 fw-bold"><span id="displayLogCount">@logCount.ToString("N0")</span></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="feather-droplet display-6"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1 text-white-50">Total Volume</h6>
                            <h3 class="mb-0 fw-bold"><span id="displayTotalVolume">@totalVolume.ToString("N2")</span> L</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fa-light fa-naira-sign display-6">₦</i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title mb-1 text-white-50">Total Expense</h6>
                            <h3 class="mb-0 fw-bold">₦<span id="displayTotalCost">@totalCost.ToString("N2")</span></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-medium text-muted">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="feather-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Search logs..." id="searchInput">
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-medium text-muted">Date From</label>
                    <input type="text" class="form-control" id="dateFrom" placeholder="Select date">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-medium text-muted">Date To</label>
                    <input type="text" class="form-control" id="dateTo" placeholder="Select date">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-medium text-muted">Fuel Type</label>
                    <select class="form-select" id="fuelTypeFilter">
                        <option value="">All Types</option>
                        <option value="Petrol">Petrol</option>
                        <option value="Diesel">Diesel</option>
                        <option value="Hybrid">Hybrid</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-medium text-muted">Actions</label>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-primary flex-fill" id="applyFilters">
                            <i class="feather-filter me-1"></i>Filter
                        </button>
                        <button type="button" class="btn btn-outline-secondary flex-fill" id="clearFilters">
                            <i class="feather-x me-1"></i>Clear
                        </button>
                        <button type="button" class="btn btn-outline-secondary flex-fill">
                            <i class="feather-download me-1"></i>Export
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Results Info -->
    <div id="filterResults" class="filter-results" style="display: none;">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Filter Results:</strong> <span id="filteredCount">0</span> of <span id="totalCount">@logCount</span> entries shown
            </div>
            <small class="text-muted" id="filterCriteria"></small>
        </div>
    </div>

    <!-- Main Data Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold text-dark">Fuel Log Entries</h5>
                <div class="d-flex align-items-center text-muted">
                    <span class="small">Showing <span id="currentCount">@logCount</span> entries</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-container">
                    <table class="table table-hover align-middle mb-0" id="fuelLogsTable">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-semibold text-dark border-0 ps-4">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-calendar me-2 text-primary"></i>Date
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-user me-2 text-success"></i>Driver
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-truck me-2 text-info"></i>Vehicle
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-activity me-2 text-warning"></i>Odometer
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-droplet me-2 text-primary"></i>Volume
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class=" me-2 text-success">₦</i>Cost
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-zap me-2 text-danger"></i>Fuel Type
                                    </div>
                                </th>
                                <th class="fw-semibold text-dark border-0 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr class="border-bottom fuel-log-row" 
                                    data-date="@log.Date.ToString("yyyy-MM-dd")"
                                    data-driver="@log.DriverName?.ToLower()"
                                    data-vehicle="@log.VehicleDescription?.ToLower()"
                                    data-plate="@log.PlateNo?.ToLower()"
                                    data-fuel-type="@log.FuelType?.ToLower()"
                                    data-cost="@log.Cost"
                                    data-volume="@log.Volume">
                                    <td class="ps-4">
                                        <div class="d-flex flex-column">
                                            <span class="fw-medium text-dark">@log.Date.ToString("dd MMM yyyy")</span>
                                            <small class="text-muted">@log.Date.ToString("dddd")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <span class="text-primary fw-bold small">@(log.DriverName?.Substring(0, 1).ToUpper())</span>
                                            </div>
                                            <span class="fw-medium text-dark">@log.DriverName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-medium text-dark">@log.VehicleDescription</span>
                                            <small class="text-muted">@log.PlateNo</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info fw-medium px-3 py-2">
                                            @log.Odometer km
                                        </span>
                                    </td>
                                    <td>
                                        <span class="fw-medium text-dark">@log.Volume.ToString("F2")</span>
                                        <small class="text-muted ms-1">Liters</small>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-success fs-6">₦@log.Cost.ToString("N2")</span>
                                            <small class="text-muted">@((log.Cost / (decimal)log.Volume).ToString("F2"))/L</small>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var fuelBadgeClass = log.FuelType?.ToLower() switch
                                            {
                                                "petrol" => "bg-primary-subtle text-primary",
                                                "diesel" => "bg-warning-subtle text-warning",
                                                "hybrid" => "bg-success-subtle text-success",
                                                _ => "bg-secondary-subtle text-secondary"
                                            };
                                        }
                                        <span class="badge @fuelBadgeClass fw-medium px-3 py-2">
                                            @log.FuelType
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="dropdown">
                                            <button class="btn btn-light btn-sm dropdown-toggle shadow-sm" type="button" data-bs-toggle="dropdown">
                                                <i class="feather-more-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                                <li>
                                                    <button class="dropdown-item d-flex align-items-center view-details-btn" data-id="@log.Id">
                                                        <i class="feather-eye me-2 text-info"></i>View Details
                                                    </button>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" asp-action="Edit" asp-route-id="@log.Id">
                                                        <i class="feather-edit me-2 text-primary"></i>Edit Log
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <button class="dropdown-item d-flex align-items-center text-danger delete-btn" data-id="@log.Id" data-driver="@log.DriverName" data-vehicle="@log.VehicleDescription">
                                                        <i class="feather-trash-2 me-2"></i>Delete Log
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="mb-4">
                        <i class="feather-inbox display-4 text-muted"></i>
                    </div>
                    <h5 class="text-muted mb-2">No Fuel Logs Found</h5>
                    <p class="text-muted mb-4">Start tracking your fleet's fuel consumption by adding your first log entry.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="feather-plus me-2"></i>Add First Log
                    </a>
                </div>
            }
            
            <!-- No Results State (for filtering) -->
            <div id="noResultsState" class="empty-state" style="display: none;">
                <div class="mb-4">
                    <i class="feather-search display-4 text-muted"></i>
                </div>
                <h5 class="text-muted mb-2">No Matching Records</h5>
                <p class="text-muted mb-4">Try adjusting your search criteria or clear filters to see all entries.</p>
                <button class="btn btn-outline-primary" id="clearFiltersBtn">
                    <i class="feather-x me-2"></i>Clear Filters
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">
                    <i class="feather-file-text me-2"></i>Fuel Log Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <div class="d-flex justify-content-center align-items-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Flatpickr for date inputs
    const dateFromPicker = flatpickr("#dateFrom", {
        dateFormat: "Y-m-d",
        allowInput: true,
        placeholder: "Select start date"
    });

    const dateToPicker = flatpickr("#dateTo", {
        dateFormat: "Y-m-d",
        allowInput: true,
        placeholder: "Select end date"
    });

    // Store original data for filtering
    const originalRows = Array.from(document.querySelectorAll('.fuel-log-row'));
    const totalOriginalCount = originalRows.length;

    // Filter functionality
    function applyFilters() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
        const dateFrom = document.getElementById('dateFrom').value;
        const dateTo = document.getElementById('dateTo').value;
        const fuelType = document.getElementById('fuelTypeFilter').value.toLowerCase();

        let visibleCount = 0;
        let totalCost = 0;
        let totalVolume = 0;
        let filterCriteria = [];

        originalRows.forEach(row => {
            let shouldShow = true;

            // Search filter
            if (searchTerm) {
                const searchableText = (
                    row.dataset.driver + ' ' +
                    row.dataset.vehicle + ' ' +
                    row.dataset.plate
                ).toLowerCase();
                
                if (!searchableText.includes(searchTerm)) {
                    shouldShow = false;
                }
                if (filterCriteria.indexOf('Search') === -1) filterCriteria.push(`Search: "${searchTerm}"`);
            }

            // Date filters
            const rowDate = row.dataset.date;
            if (dateFrom && rowDate < dateFrom) {
                shouldShow = false;
            }
            if (dateTo && rowDate > dateTo) {
                shouldShow = false;
            }
            if (dateFrom || dateTo) {
                const dateFilter = dateFrom && dateTo ? `${dateFrom} to ${dateTo}` : 
                                 dateFrom ? `From ${dateFrom}` : `Until ${dateTo}`;
                if (filterCriteria.indexOf(dateFilter) === -1) filterCriteria.push(`Date: ${dateFilter}`);
            }

            // Fuel type filter
            if (fuelType && row.dataset.fuelType !== fuelType) {
                shouldShow = false;
            }
            if (fuelType && filterCriteria.indexOf('Fuel Type') === -1) {
                filterCriteria.push(`Fuel Type: ${document.getElementById('fuelTypeFilter').value}`);
            }

            // Show/hide row
            if (shouldShow) {
                row.style.display = '';
                visibleCount++;
                totalCost += parseFloat(row.dataset.cost);
                totalVolume += parseFloat(row.dataset.volume);
            } else {
                row.style.display = 'none';
            }
        });

        // Update summary cards
        document.getElementById('displayLogCount').textContent = visibleCount.toLocaleString();
        document.getElementById('displayTotalVolume').textContent = totalVolume.toFixed(2);
        document.getElementById('displayTotalCost').textContent = totalCost.toLocaleString('en-US', {minimumFractionDigits: 2});
        document.getElementById('currentCount').textContent = visibleCount;

        // Show/hide filter results info
        const filterResults = document.getElementById('filterResults');
        const noResultsState = document.getElementById('noResultsState');
        const tableContainer = document.querySelector('.table-container');

        if (filterCriteria.length > 0) {
            filterResults.style.display = 'block';
            document.getElementById('filteredCount').textContent = visibleCount;
            document.getElementById('totalCount').textContent = totalOriginalCount;
            document.getElementById('filterCriteria').textContent = filterCriteria.join(' | ');
        } else {
            filterResults.style.display = 'none';
        }

        // Show no results state if no matches
        if (visibleCount === 0 && filterCriteria.length > 0) {
            if (tableContainer) tableContainer.style.display = 'none';
            noResultsState.style.display = 'flex';
        } else {
            if (tableContainer) tableContainer.style.display = 'block';
            noResultsState.style.display = 'none';
        }
    }

    function clearFilters() {
        document.getElementById('searchInput').value = '';
        document.getElementById('fuelTypeFilter').value = '';
        dateFromPicker.clear();
        dateToPicker.clear();
        
        // Reset all rows to visible
        originalRows.forEach(row => {
            row.style.display = '';
        });

        // Reset summary cards to original values
        document.getElementById('displayLogCount').textContent = '@logCount.ToString("N0")';
        document.getElementById('displayTotalVolume').textContent = '@totalVolume.ToString("N2")';
        document.getElementById('displayTotalCost').textContent = '@totalCost.ToString("N2")';
        document.getElementById('currentCount').textContent = '@logCount';

        // Hide filter results
        document.getElementById('filterResults').style.display = 'none';
        document.getElementById('noResultsState').style.display = 'none';
        
        if (document.querySelector('.table-container')) {
            document.querySelector('.table-container').style.display = 'block';
        }
    }

    // Event listeners
    document.getElementById('applyFilters').addEventListener('click', applyFilters);
    document.getElementById('clearFilters').addEventListener('click', clearFilters);
    document.getElementById('clearFiltersBtn').addEventListener('click', clearFilters);

    // Real-time search
    document.getElementById('searchInput').addEventListener('input', applyFilters);
    document.getElementById('fuelTypeFilter').addEventListener('change', applyFilters);
    document.getElementById('dateFrom').addEventListener('change', applyFilters);
    document.getElementById('dateTo').addEventListener('change', applyFilters);

    // Details modal functionality
    document.querySelectorAll('.view-details-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const logId = this.dataset.id;
            const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            
            // Show loading spinner
            document.getElementById('detailsModalBody').innerHTML = `
                <div class="d-flex justify-content-center align-items-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;
            
            modal.show();
            
            // Fetch details via AJAX
            fetch(`@Url.Action("Details", "FuelLog")/${logId}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('detailsModalBody').innerHTML = html;
                })
                .catch(error => {
                    document.getElementById('detailsModalBody').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="feather-alert-circle me-2"></i>
                            Error loading details. Please try again.
                        </div>
                    `;
                });
        });
    });

    // Delete confirmation functionality
    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const logId = this.dataset.id;
            const driverName = this.dataset.driver;
            const vehicleDesc = this.dataset.vehicle;
            
            Swal.fire({
                title: 'Delete Fuel Log?',
                html: `
                    <div class="text-start mt-3">
                        <p class="mb-2"><strong>Driver:</strong> ${driverName}</p>
                        <p class="mb-2"><strong>Vehicle:</strong> ${vehicleDesc}</p>
                        <p class="text-danger mb-0"><small>This action cannot be undone.</small></p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="feather-trash-2 me-1"></i> Yes, Delete',
                cancelButtonText: '<i class="feather-x me-1"></i> Cancel',
                reverseButtons: true,
                customClass: {
                    popup: 'swal2-border-radius'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Create and submit form
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `@Url.Action("Delete", "FuelLog")/${logId}`;
                    
                    // Add CSRF token if available
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const hiddenToken = document.createElement('input');
                        hiddenToken.type = 'hidden';
                        hiddenToken.name = '__RequestVerificationToken';
                        hiddenToken.value = token.value;
                        form.appendChild(hiddenToken);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });
    });
});
</script>


















