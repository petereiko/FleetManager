        min-width: 0;
    }

    .driver-name {
        color: var(--license-text);
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0 0rem 0;
        text-shadow: 0 1px 2px var(--shadow-medium);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .license-number {
        color: var(--license-gold);
        font-size: 0.85rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
        letter-spacing: 1px;
        margin-bottom: 5px;
    }

    .driver-details {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.4rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: var(--license-text);
        font-size: 0.75rem;
        opacity: 0.9;
    }

    .detail-label {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        flex-shrink: 0;
    }

    .detail-value {
        font-weight: 400;
        text-align: right;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-left: 0.5rem;
    }

    .branch-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: var(--license-text);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .license-actions {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        padding: 0.75rem 1.5rem;
        display: flex;
        gap: 0.5rem;
        transition: all 0.3s ease;
        opacity: 0;
    }

    .license-card:hover .license-actions {
        bottom: 0;
        opacity: 1;
    }

    .action-btn {
        flex: 1;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--license-text);
        padding: 0.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        text-align: center;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .action-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            color: var(--license-text);
            transform: translateY(-2px);
        }

        .action-btn i {
            margin-right: 0.25rem;
        }

    .pagination-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-top: 3rem;
        box-shadow: 0 8px 32px var(--shadow-light);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .pagination {
        margin: 0;
    }

    .page-link {
        border: none;
        background: transparent;
        color: var(--license-primary);
        font-weight: 600;
        padding: 0.75rem 1rem;
        margin: 0 0.25rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

        .page-link:hover,
        .page-item.active .page-link {
            background: var(--license-primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(44, 90, 160, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: white;
    }

        .empty-state i {
            font-size: 4rem;
            opacity: 0.5;
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            opacity: 0.8;
        }

        .empty-state p {
            opacity: 0.6;
            font-size: 1rem;
        }

    @@media (max-width: 768px) {
        .drivers-grid

    {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        padding: 0 0.5rem;
    }

    .license-card {
        max-width: none;
    }

    .page-header {
        padding: 1.5rem;
    }

    .page-title {
        font-size: 2rem;
    }

    .license-body {
        flex-direction: column;
        gap: 1rem;
    }

    .driver-photo {
        align-self: center;
    }

    .driver-details {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="drivers-container">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h3 class="page-title">
                        <i class="feather-users me-2"></i>
                        Drivers Directory
                    </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active">Driver List</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-sm-6 text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="feather-plus me-2"></i>
                        Add New Driver
                    </a>
                </div>
            </div>
        </div>

        <!-- Drivers Grid -->
        @if (Model.Drivers?.Any() == true)
        {
            <div class="drivers-grid">
                @foreach (var d in Model.Drivers)
                {
                    <div class="license-card">
                        <!-- License Header -->
                        <div class="license-header">
                            <div class="license-title">Driver's License</div>
                            <div class="license-subtitle">Fleet Management System</div>
                            <div class="status-indicator @(d.IsActive ? "status-active" : "status-inactive")"
                                 title="@(d.IsActive ? "Active Driver" : "Inactive Driver")"></div>
                        </div>

                        <!-- Branch Badge (if global view) -->
                        @if (Model.IsGlobal && !string.IsNullOrEmpty(d.BranchName))
                        {
                            <div class="branch-badge">
                                <i class="feather-map-pin me-1"></i>@d.BranchName
                            </div>
                        }

                        <!-- License Body -->
                        <div class="license-body">
                            <!-- Driver Photo -->
                            <div class="driver-photo">
                                <img src="@(d.PhotoPath ?? "/images/default-user.png")"
                                     alt="@d.FullName" />
                            </div>

                            <!-- Driver Information -->
                            <div class="driver-info">
                                <div>
                                    <div class="driver-name" title="@d.FullName">@d.FullName</div>
                                    <div class="license-number">LIC: @d.LicenseNumber</div>
                                </div>

                                <div class="driver-details">
                                    @if (!string.IsNullOrEmpty(d.Phone))
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">
                                                <i class="feather-phone me-1"></i>Phone
                                            </span>
                                            <span class="detail-value">@d.Phone</span>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(d.Email))
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">
                                                <i class="feather-mail me-1"></i>Email
                                            </span>
                                            <span class="detail-value" title="@d.Email">@d.Email</span>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(d.VehicleAssigned))
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">
                                                <i class="feather-truck me-1"></i>Vehicle
                                            </span>
                                            <span class="detail-value" title="@d.VehicleAssigned">@d.VehicleAssigned</span>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(d.ShiftStatus.GetDisplayName()))
                                    {
                                        <div class="detail-row">
                                            <span class="detail-label">
                                                <i class="feather-clock me-1"></i>Shift
                                            </span>
                                            <span class="detail-value">@d.ShiftStatus</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Hover Actions -->
                        <div class="license-actions">
                            <a asp-action="Details" asp-route-id="@d.Id" class="action-btn">
                                <i class="feather-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@d.Id" class="action-btn">
                                <i class="feather-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="feather-users"></i>
                <h3>No Drivers Found</h3>
                <p>Start by adding your first driver to the system</p>
            </div>
        }

        <!-- Pagination -->
        @if (Model.Pagination?.TotalPages > 1)
        {
            <div class="pagination-container">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage - 1)">
                                <i class="feather-chevron-left me-1"></i> Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage + 1)">
                                Next <i class="feather-chevron-right ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>















