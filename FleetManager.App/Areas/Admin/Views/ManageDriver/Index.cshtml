<div class="drivers-page">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-sm-8">
                    <h1 class="page-title">
                        <i class="feather-users me-2" style="color: var(--primary-blue);"></i>
                        Driver Management
                    </h1>
                    <p class="page-subtitle">Manage your fleet drivers and their assignments</p>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" asp-controller="Dashboard">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active">Drivers</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-sm-4 text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="feather-plus me-2"></i>
                        Add Driver
                    </a>
                </div>
            </div>
        </div>

        <!-- Drivers Grid -->
        @if (Model.Drivers?.Any() == true)
        {
            <div class="drivers-grid">
                @foreach (var d in Model.Drivers)
                {
                    <div class="driver-card">
                        <!-- Card Header with Driver Photo and Basic Info -->
                        <div class="card-header">
                            <div class="driver-avatar">
                                <img src="@(d.PhotoPath ?? "/images/default-user.png")"
                                     alt="@d.FullName" />
                            </div>
                            <div class="driver-basic-info">
                                <h3 class="driver-name" title="@d.FullName">@d.FullName</h3>
                                <p class="driver-license">License: @d.LicenseNumber</p>
                            </div>

                            <!-- Status Badge -->
                            <div class="status-badge @(d.IsActive ? "status-active" : "status-inactive")">
                                <span class="status-dot"></span>
                                @(d.IsActive ? "Active" : "Inactive")
                            </div>
                        </div>

                        <!-- Branch Tag (if global view) -->
                        @if (Model.IsGlobal && !string.IsNullOrEmpty(d.BranchName))
                        {
                            <div class="branch-tag">
                                <i class="feather-map-pin me-1"></i>@d.BranchName
                            </div>
                        }

                        <!-- Card Body with Details -->
                        <div class="card-body">
                            <div class="driver-details">
                                @if (!string.IsNullOrEmpty(d.Phone))
                                {
                                    <div class="detail-item">
                                        <i class="feather-phone detail-icon"></i>
                                        <div class="detail-content">
                                            <p class="detail-label">Phone</p>
                                            <p class="detail-value">@d.Phone</p>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(d.Email))
                                {
                                    <div class="detail-item">
                                        <i class="feather-mail detail-icon"></i>
                                        <div class="detail-content">
                                            <p class="detail-label">Email</p>
                                            <p class="detail-value" title="@d.Email">@d.Email</p>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(d.VehicleAssigned))
                                {
                                    <div class="detail-item">
                                        <i class="feather-truck detail-icon"></i>
                                        <div class="detail-content">
                                            <p class="detail-label">Assigned Vehicle</p>
                                            <p class="detail-value" title="@d.VehicleAssigned">@d.VehicleAssigned</p>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(d.ShiftStatus.GetDisplayName()))
                                {
                                    <div class="detail-item">
                                        <i class="feather-clock detail-icon"></i>
                                        <div class="detail-content">
                                            <p class="detail-label">Shift Status</p>
                                            <p class="detail-value">@d.ShiftStatus</p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Card Actions -->
                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@d.Id" class="action-btn">
                                    <i class="feather-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@d.Id" class="action-btn">
                                    <i class="feather-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="feather-users empty-state-icon"></i>
                <h3>No Drivers Found</h3>
                <p>Get started by adding your first driver to the fleet management system.</p>
            </div>
        }

        <!-- Pagination -->
        @if (Model.Pagination?.TotalPages > 1)
        {
            <div class="pagination-wrapper">
                <nav aria-label="Drivers pagination">
                    <ul class="pagination">
                        <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage - 1)">
                                <i class="feather-chevron-left me-1"></i> Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage + 1)">
                                Next <i class="feather-chevron-right ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
