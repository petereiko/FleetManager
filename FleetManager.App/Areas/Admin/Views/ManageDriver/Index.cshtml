@using FleetManager.Business.ViewModels
@model DriverIndexViewModel
@{
    ViewData["Title"] = "Drivers";
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h3 class="page-title">Drivers</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Driver List</li>
                    </ol>
                </nav>
            </div>
            <div class="col-sm-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="feather-plus me-1"></i> Add Driver
                </a>
            </div>
        </div>
    </div>

    <div class="row g-3">
        @foreach (var d in Model.Drivers)
        {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="vehicle-card">  @* reuse your .vehicle-card styles *@
                        <div class="vehicle-image-container">
                            <img src="@(d.PhotoPath ?? "/images/default-user.png")"
                                 alt="@d.FullName"
                                 class="vehicle-image" />
                            <span class="vehicle-status-badge @(d.IsActive ? "badge-active" : "badge-inactive")">
                                <i class="fas @(d.IsActive ? "fa-user-check" : "fa-user-times")"></i>
                            @(d.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>

                        <div class="vehicle-header">
                            <h3 class="vehicle-model">
                            @d.FullName
                            </h3>
                        @if (Model.IsGlobal)
                        {
                                    <span class="branch-tag">
                                        <i class="feather-map-pin branch-icon"></i>@d.BranchName
                                    </span>
                        }
                        </div>

                        <div class="vehicle-specs">
                            <div class="spec-item">
                                <span class="spec-label">License:</span>
                                <span class="spec-value">@d.LicenseNumber</span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Expires:</span>
                                <span class="spec-value">
                                @(d.LicenseExpiryDate?.ToString("dd MMM yyyy") ?? "—")
                                </span>
                            </div>
                            <div class="spec-item">
                                <span class="spec-label">Shift:</span>
                                <span class="spec-value">@d.ShiftStatus</span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@d.Id" class="manage-btn">
                                <i class="feather-settings"></i> Manage
                            </a>
                        </div>
                    </div>
                </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.Pagination.TotalPages > 1)
    {
            <nav class="mt-4" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage - 1)">Previous</a>
                    </li>
                @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                {
                            <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-page="@i">@i</a>
                            </li>
                }
                    <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.Pagination.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
    }
</div>
