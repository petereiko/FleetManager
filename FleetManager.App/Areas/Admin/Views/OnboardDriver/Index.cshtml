@using FleetManager.Business.DataObjects
@model List<CompanyAdminDto>

<div class="content">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Company" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><i class="feather-chevron-right"></i></li>
                    <li class="breadcrumb-item active">Company’s Admins</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-sm-12">

            <div class="card card-table show-entire">
                <div class="card-body">

                    <!-- Table Header -->
                    <div class="page-table-header mb-2">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="doctor-table-blk">
                                    <h3>Admins List</h3>
                                    <div class="doctor-search-blk">
                                        <div class="top-nav-search table-search-blk">
                                            <input type="text" id="adminSearch" class="form-control" placeholder="Search here">
                                            <button id="searchBtn" class="btn"><img src="~/assets/img/icons/search-normal.svg" alt="Search"></button>
                                        </div>
                                        <div class="add-group">
                                            <a asp-action="RegisterAdmin" class="btn btn-primary add-pluss ms-2">
                                                <img src="~/assets/img/icons/plus.svg" alt="Add Admin">
                                            </a>
                                            <button id="refreshBtn" class="btn btn-primary doctor-refresh ms-2">
                                                <img src="~/assets/img/icons/re-fresh.svg" alt="Refresh">
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto text-end float-end ms-auto download-grp">
                                <a href="#"><img src="~/assets/img/icons/pdf-icon-01.svg" alt="PDF"></a>
                                <a href="#"><img src="~/assets/img/icons/pdf-icon-02.svg" alt="Excel"></a>
                                <a href="#"><img src="~/assets/img/icons/pdf-icon-03.svg" alt="CSV"></a>
                                <a href="#"><img src="~/assets/img/icons/pdf-icon-04.svg" alt="Print"></a>
                            </div>
                        </div>
                    </div>
                    <!-- /Table Header -->

                    <div class="table-responsive">
                        <table id="adminsTable" class="table border-0 custom-table comman-table mb-0">
                            <thead>
                                <tr>
                                    <th><div class="form-check check-tables"><input class="form-check-input" type="checkbox"></div></th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Branch</th>
                                    <th>Created</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check check-tables">
                                                <input class="form-check-input" type="checkbox" value="@a.Id" />
                                            </div>
                                        </td>
                                        <td>@a.FirstName @a.LastName</td>
                                        <td>@a.Email</td>
                                        <td>@a.PhoneNumber</td>
                                        <td>@(string.IsNullOrWhiteSpace(a.BranchName) ? "—" : a.BranchName)</td>
                                        <td>@a.CreatedDate.ToString("yyyy-MM-dd")</td>
                                        <td class="text-end">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown">
                                                    <i class="fa fa-ellipsis-v"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a asp-action="Edit" asp-route-id="@a.Id" class="dropdown-item">
                                                        <i class="fa-solid fa-pen-to-square m-r-5"></i> Edit
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@a.Id" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-trash-alt m-r-5"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            if (!$.fn.dataTable.isDataTable('#adminsTable')) {
                var table = $('#adminsTable').DataTable({
                    paging: true,
                    pageLength: 10,
                    lengthChange: true,
                    searching: false,   // disable built-in search bar
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    dom: 'lrtip'        // omit 'f' (filter input)
                });

                // custom search
                $('#searchBtn').click(function() {
                    table.search($('#adminSearch').val()).draw();
                });
                // refresh
                $('#refreshBtn').click(function() {
                    table.search('').order([]).page.len(10).draw();
                });
            }
        });
    </script>
}
