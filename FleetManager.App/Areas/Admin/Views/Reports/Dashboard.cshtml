@model FleetManager.Business.DataObjects.ReportsDto.DashboardViewModel
@{
    ViewData["Title"] = "Fleet Dashboard";
}

<div class="dashboard-container">
    <div class="dashboard-header bg-primary text-white py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h2 mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>Fleet Dashboard
                    </h1>
                    <p class="lead mb-0">Key performance indicators and fleet insights</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="btn-group">
                        <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-calendar me-1"></i> Last 30 Days
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                            <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                            <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                            <li><a class="dropdown-item" href="#">Year to Date</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Vehicle Utilization</h5>
                            <span class="badge bg-primary">N/A</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="utilizationChartPlaceholder" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">Loading utilization data...</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Driver Compliance Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="compliance-chart-container">
                            <canvas id="complianceChart" height="250"></canvas>
                        </div>
                        <div class="mt-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Compliant Drivers:</span>
                                <strong class="text-success">@Model.CompliantDrivers</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Licenses Expiring:</span>
                                <strong class="text-warning">@Model.ExpiringLicenses</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Non-Compliant:</span>
                                <strong class="text-danger">@Model.NonCompliantDrivers</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Fuel Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="fs-2 fw-bold text-primary">₦@Model.TotalFuelCost.ToString("N2")</div>
                                <div class="text-muted">Total Fuel Cost</div>
                            </div>
                            <i class="fas fa-gas-pump fa-2x text-warning"></i>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="fw-bold">@Model.TotalFuelVolume.ToString("N0") L</div>
                                <div class="small text-muted">Volume</div>
                            </div>
                            <div class="col-6 text-end">
                                <div class="fw-bold">@Model.TotalFillUps</div>
                                <div class="small text-muted">Fill-ups</div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 me-2">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @Model.AverageFuelEfficiency%;"
                                         aria-valuenow="@Model.AverageFuelEfficiency"
                                         aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                            <div class="fw-bold">@Model.AverageFuelEfficiency.ToString("0")%</div>
                        </div>
                        <div class="small text-muted mt-1">Fuel efficiency score</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Compliance Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-danger text-white rounded-circle p-2 me-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div>
                                <div class="h4 mb-0 fw-bold">@(@Model.ExpiredInsurance + @Model.ExpiredRoadWorthy)</div>
                                <div class="text-muted">Total Compliance Alerts</div>
                            </div>
                        </div>
                        <div class="alert-summary">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Insurance Expired:</span>
                                <strong>@Model.ExpiredInsurance</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Roadworthy Expired:</span>
                                <strong>@Model.ExpiredRoadWorthy</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center py-4">
                            <i class="fas fa-sync fa-spin fa-2x text-muted mb-3"></i>
                            <p>Loading recent activity...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-md-2">
                <i class="fas fa-arrow-left me-1"></i> Back to Reports
            </a>
            <form asp-action="Export" method="post">
                <input type="hidden" name="ReportRequest.ReportType" value="Dashboard" />
                <button type="submit" name="Format" value="PDF" class="btn btn-primary">
                    <i class="fas fa-download me-1"></i> Export Dashboard
                </button>
            </form>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const compCtx = document.getElementById('complianceChart').getContext('2d');
            new Chart(compCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Compliant', 'Expiring Soon', 'Non-Compliant'],
                    datasets: [{
                        data: [
        @Model.CompliantDrivers,
        @Model.ExpiringLicenses,
        @Model.NonCompliantDrivers
                        ],
                        backgroundColor: [
                            'rgba(25, 135, 84, 0.8)',
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 15,
                                padding: 20
                            }
                        }
                    }
                }
            });
        });


        // Vehicle Utilization Chart Loader
        fetch('/Reports/GetUtilizationData')
            .then(response => response.json())
            .then(data => {
                const chartContainer = document.getElementById('utilizationChartPlaceholder');
                chartContainer.innerHTML = `<canvas id="utilizationChart" height="300"></canvas>`;
                const ctx = document.getElementById('utilizationChart').getContext('2d');

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Utilization'],
                        datasets: [{
                            label: 'Active Vehicles',
                            data: [data.utilizationRate],
                            backgroundColor: 'rgba(13, 110, 253, 0.6)'
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                title: {
                                    display: true,
                                    text: '% Utilization'
                                }
                            }
                        }
                    }
                });
            })
            .catch(err => {
                const chartContainer = document.getElementById('utilizationChartPlaceholder');
                chartContainer.innerHTML = `<p class="text-danger text-center">Error loading utilization data.</p>`;
                console.error(err);
            });
    });
    </script>

