@using FleetManager.Business.ViewModels
@model CompanyRegistrationViewModel

@{
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="login-right">
	<div class="login-right-wrap">
		<div class="account-logo">
			<a href="index.html"><img src="~/assets/img/login-logo.png" alt=""></a>
		</div>
		<h2>Login</h2>
		<!-- Form -->
		<form asp-action="Create">
			<div class="input-block">
				<label asp-for="Name">Name of your Organization <span class="login-danger">*</span></label>
				<input asp-for="Name" class="form-control" type="text">
			</div>
			<div class="input-block">
				<label asp-for="Email">Organization's Email <span class="login-danger">*</span></label>
				<input asp-for="Email" class="form-control pass-input" type="text">
				<span asp-validation-for="Email" class="profile-views"></span>
			</div>

			<div class="input-block login-btn">
				<button class="btn btn-primary btn-block" type="submit">Create</button>
			</div>
		</form>
		<!-- /Form -->
		<div class="next-sign">
			<p class="account-subtitle">Already Have an account with us?  <a asp-action="Login" asp-controller="Account" asp-area="Company">Sign Up</a></p>

			<!-- Social Login -->
			<div class="social-login">
				<a href="javascript:;"><img src="assets/img/icons/login-icon-01.svg" alt=""></a>
				<a href="javascript:;"><img src="assets/img/icons/login-icon-02.svg" alt=""></a>
				<a href="javascript:;"><img src="assets/img/icons/login-icon-03.svg" alt=""></a>
			</div>
			<!-- /Social Login -->

		</div>
	</div>
</div>