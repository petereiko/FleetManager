    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content text-center">
                <h1 class="hero-title animate-on-scroll">Professional Services Directory</h1>
                <p class="hero-subtitle animate-on-scroll">Connect with verified fleet service providers across the nation</p>
                <div class="row justify-content-center animate-on-scroll">
                    <div class="col-lg-8">
                        <div class="d-flex flex-wrap gap-3 justify-content-center">
