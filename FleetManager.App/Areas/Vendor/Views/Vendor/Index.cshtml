@using FleetManager.Business.DataObjects.VendorDto;
@model IEnumerable<VendorDto>
@{
    ViewData["Title"] = "Professional Services Directory";
    Layout = "_Layout";
}

    <style>
        .hero-banner {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0;
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }
        
        .hero-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            opacity: 0.3;
        }
        
        .hero-content {
            position: relative;
            z-index: 1;
        }
        
        .vendor-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
            overflow: hidden;
        }
        
        .vendor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        }
        
        .vendor-header {
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
            padding: 20px;
            border-bottom: 1px solid #dee2e6;
        }
        
        .vendor-name {
            font-size: 1.4rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 5px;
        }
        
        .vendor-category {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .vendor-body {
            padding: 20px;
        }
        
        .info-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 12px;
            padding: 8px 0;
        }
        
        .info-icon {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            color: #667eea;
            flex-shrink: 0;
            margin-top: 2px;
        }
        
        .info-content {
            flex: 1;
        }
        
        .info-label {
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }
        
        .info-value {
            color: #6c757d;
            margin-top: 2px;
        }
        
        .btn-view-details {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 6px;
            padding: 8px 20px;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .btn-view-details:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }
        
        .vendor-cta-section {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            color: white;
            padding: 60px 0;
            margin: 60px 0 40px 0;
            position: relative;
        }
        
        .vendor-cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><polygon points="0,0 100,0 80,100 0,100" fill="rgba(255,255,255,0.05)"/></svg>');
        }
        
        .cta-content {
            position: relative;
            z-index: 1;
        }
        
        .btn-register-vendor {
            background: #e74c3c;
            border: none;
            border-radius: 50px;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        }
        
        .btn-register-vendor:hover {
            background: #c0392b;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
        }
        
        .stats-section {
            background: #f8f9fa;
            padding: 40px 0;
            margin-bottom: 40px;
        }
        
        .stat-item {
            text-align: center;
            padding: 20px;
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #667eea;
            display: block;
        }
        
        .stat-label {
            color: #6c757d;
            font-weight: 500;
            margin-top: 5px;
        }
        
        .section-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 50px;
            position: relative;
        }
        
        .section-title::after {
            content: '';
            width: 80px;
            height: 3px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
        }
        
        .search-filter-bar {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            margin-bottom: 40px;
        }
        
        .no-vendors {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        
        .no-vendors i {
            font-size: 4rem;
            color: #dee2e6;
            margin-bottom: 20px;
        }
        
        @@media (max-width: 768px) {
            .hero-banner {
                padding: 50px 0;
            }
            
            .vendor-cta-section {
                padding: 40px 0;
            }
            
            .section-title {
                font-size: 1.8rem;
            }
        }
    </style>

<!-- Hero Banner -->
<div class="hero-banner">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="display-4 fw-bold mb-3">Professional Services Directory</h1>
            <p class="lead mb-4">Connect with trusted vendors and service providers for all your business needs</p>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <p class="fs-5">Discover verified professionals, compare services, and build lasting business relationships with our curated network of vendors.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <span class="stat-number">@(Model?.Count() ?? 0)+</span>
                    <div class="stat-label">Verified Vendors</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <span class="stat-number">@(Model?.Select(v => v.VendorCategoryName).Distinct().Count() ?? 0)+</span>
                    <div class="stat-label">Service Categories</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <span class="stat-number">24/7</span>
                    <div class="stat-label">Support Available</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <span class="stat-number">100%</span>
                    <div class="stat-label">Satisfaction Goal</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <!-- Search and Filter Bar -->
    <div class="search-filter-bar">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-3 mb-md-0">
                    <i class="fas fa-search me-2"></i>
                    Find the perfect vendor for your needs
                </h5>
            </div>
            <div class="col-md-4 text-md-end">
                <button class="btn btn-outline-primary">
                    <i class="fas fa-filter me-2"></i>Filter & Search
                </button>
            </div>
        </div>
    </div>

    <!-- Section Title -->
    <h2 class="section-title">Featured Vendors & Services</h2>

    <!-- Vendors Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var vendor in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card vendor-card">
                        <div class="vendor-header">
                            <h3 class="vendor-name">@vendor.VendorName</h3>
                            <span class="vendor-category">@vendor.VendorCategoryName</span>
                        </div>
                        <div class="vendor-body">
                            <div class="info-item">
                                <i class="fas fa-briefcase info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Services</div>
                                    <div class="info-value">@vendor.VendorServiceOffered</div>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fas fa-user info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Contact Person</div>
                                    <div class="info-value">@vendor.ContactPerson</div>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fas fa-phone info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Phone</div>
                                    <div class="info-value">
                                        <a href="tel:@vendor.ContactPersonPhone" class="text-decoration-none">
                                            @vendor.ContactPersonPhone
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(vendor.Email))
                            {
                                <div class="info-item">
                                    <i class="fas fa-envelope info-icon"></i>
                                    <div class="info-content">
                                        <div class="info-label">Email</div>
                                        <div class="info-value">
                                            <a href="mailto:@vendor.Email" class="text-decoration-none">
                                                @vendor.Email
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(vendor.Address))
                            {
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt info-icon"></i>
                                    <div class="info-content">
                                        <div class="info-label">Location</div>
                                        <div class="info-value">@vendor.Address</div>
                                    </div>
                                </div>
                            }
                            
                            <div class="mt-4">
                                <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-view-details">
                                    <i class="fas fa-eye me-2"></i>View Full Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-vendors">
            <i class="fas fa-store"></i>
            <h3>No Vendors Available</h3>
            <p class="mb-4">We're currently building our network of professional service providers.</p>
            <a asp-controller="Vendor" asp-action="Register" asp-area="Vendor" class="btn btn-primary btn-lg">Be Our First Vendor Partner</a>
        </div>
    }
</div>

<!-- Vendor CTA Section -->
<div class="vendor-cta-section" id="vendor-registration">
    <div class="container">
        <div class="cta-content text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 class="display-5 fw-bold mb-4">Are You a Service Provider?</h2>
                    <p class="lead mb-4">
                        Join our network of trusted vendors and connect with clients who need your expertise. 
                        Expand your business reach and build lasting professional relationships.
                    </p>
                    <div class="row text-start mb-5">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                                <div>
                                    <h5 class="mb-1">Verified Listings</h5>
                                    <small>Get your business verified and trusted</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users fa-2x text-info me-3"></i>
                                <div>
                                    <h5 class="mb-1">Quality Leads</h5>
                                    <small>Connect with serious clients</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-chart-line fa-2x text-warning me-3"></i>
                                <div>
                                    <h5 class="mb-1">Grow Your Business</h5>
                                    <small>Expand your client base</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Vendor" asp-action="Register" asp-area="Vendor" class="btn btn-register-vendor btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i>Register as Vendor
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-phone me-2"></i>Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Information Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="p-4 bg-light rounded-3">
                <h4 class="mb-3">
                    <i class="fas fa-handshake text-primary me-2"></i>
                    For Clients
                </h4>
                <p class="mb-3">
                    Browse our directory of professional service providers, compare offerings, and connect directly with vendors that match your business needs.
                </p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Verified vendor profiles</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Direct contact information</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Service category filtering</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Free to browse and connect</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="p-4 bg-light rounded-3">
                <h4 class="mb-3">
                    <i class="fas fa-store text-success me-2"></i>
                    For Vendors
                </h4>
                <p class="mb-3">
                    Showcase your services to potential clients, build your professional network, and grow your business through our platform.
                </p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Professional profile page</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Lead generation opportunities</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Business verification badges</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Direct client communication</li>
                </ul>
            </div>
        </div>
    </div>
</div>

    <script>
        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add loading animation for vendor cards
        window.addEventListener('load', function() {
            const cards = document.querySelectorAll('.vendor-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>

























