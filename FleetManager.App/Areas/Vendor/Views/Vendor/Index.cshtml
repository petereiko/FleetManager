                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Search & Filter Section -->
    <section class="search-section">
        <div class="container">
            <div class="search-form animate-on-scroll">
                <form id="searchForm" method="get">
                    <div class="row g-3">
                        <div class="col-lg-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-search me-2"></i>Search Services, City, or State
                            </label>
                            <input type="text" class="form-control" id="searchQuery" name="search" 
                                   placeholder="e.g., Auto Repair, Lagos, Lagos State..." 
                                   value="@Context.Request.Query["search"]">
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-filter me-2"></i>Filter by Category
                            </label>
                            @* <select class="form-select" id="categoryFilter" name="category">
                                <option value="">All Categories</option>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        var selected = Context.Request.Query["category"] == category.Value ? "selected" : "";
                                        <option value="@category.Value" @selected>@category.Text</option>
                                    }
                                }
                            </select> 

                            <select class="form-select" id="categoryFilter" name="category" asp-items="@(ViewBag.Categories as List<SelectListItem>)">
                                <option value="">All Categories</option>
                            </select>
                        </div>
                        <div class="col-lg-4 d-flex align-items-end">
                            <div class="d-flex gap-2 w-100">
                                <button type="submit" class="btn btn-search flex-fill">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                                <button type="button" class="btn btn-clear" onclick="clearFilters()">
                                    <i class="fas fa-times me-2"></i>Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="container">
        @if (Model != null && Model.Any())
        {
            <!-- Results Counter -->
            <div class="results-counter animate-on-scroll">
                <h5>
                    <i class="fas fa-list-ul me-2"></i>
                    Found @Model.Count() Professional Service @(Model.Count() == 1 ? "Provider" : "Providers")
                </h5>
            </div>

            <!-- Vendors Grid -->
            <div class="vendors-grid">
                @foreach (var vendor in Model)
                {
                    <div class="vendor-card animate-on-scroll">
                        <div class="vendor-header">
                            <h3 class="vendor-name">@vendor.VendorName</h3>
                            <span class="vendor-category">@vendor.VendorCategoryName</span>
                        </div>
                        <div class="vendor-body">
                            <div class="info-item">
                                <i class="fas fa-briefcase info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Services Offered</div>
                                    <div class="info-value">@vendor.VendorServiceOffered</div>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fas fa-user info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Contact Person</div>
                                    <div class="info-value">@vendor.ContactPerson</div>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fas fa-phone info-icon"></i>
                                <div class="info-content">
                                    <div class="info-label">Phone Number</div>
                                    <div class="info-value">
                                        <a href="tel:@vendor.ContactPersonPhone">
                                            @vendor.ContactPersonPhone
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(vendor.Email))
                            {
                                <div class="info-item">
                                    <i class="fas fa-envelope info-icon"></i>
                                    <div class="info-content">
                                        <div class="info-label">Email Address</div>
                                        <div class="info-value">
                                            <a href="mailto:@vendor.Email">
                                                @vendor.Email
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(vendor.Address))
                            {
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt info-icon"></i>
                                    <div class="info-content">
                                        <div class="info-label">Location</div>
                                        <div class="info-value">@vendor.City, @vendor.StateName</div>
                                    </div>
                                </div>
                            }
                            
                            <div class="mt-4">
                                <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-view-details">
                                    <i class="fas fa-eye me-2"></i>View Complete Profile
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state animate-on-scroll">
                <i class="fas fa-search-location"></i>
                <h3>No Service Providers Found</h3>
                <p class="fs-5">We couldn't find any vendors matching your criteria. Try adjusting your search filters or browse all categories.</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a asp-controller="Vendor" asp-action="Register" asp-area="Vendor" class="btn btn-cta">
                        <i class="fas fa-rocket me-2"></i>Become a Partner
                    </a>
                    <button class="btn btn-clear" onclick="clearFilters()">
                        <i class="fas fa-list me-2"></i>View All Vendors
                    </button>
                </div>
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h5><i class="fas fa-truck me-2"></i>FleetManager</h5>
                    <p>Your trusted partner in fleet management solutions. Connecting you with verified service providers nationwide.</p>
                    <div class="d-flex gap-3 mt-3">
