    <script>
        $(document).ready(function() {
            // Smooth scrolling for CTA button
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                const target = $($(this).attr('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 50
                    }, 800);
                }
            });
            
            // Character counter for services textarea
            const textarea = $('#servicesTextarea');
            const charCount = $('#charCount');
            
            textarea.on('input', function() {
                const currentLength = $(this).val().length;
                charCount.text(currentLength);
                
                if (currentLength > 900) {
                    charCount.parent().addClass('text-warning');
                } else {
                    charCount.parent().removeClass('text-warning');
                }
            });
            
            // Enhanced form validation
            $('input, select, textarea').on('blur', function() {
                const $this = $(this);
                const value = $this.val().trim();
                
                if ($this.prop('required') && !value) {
                    $this.addClass('is-invalid').removeClass('is-valid');
                } else if (value) {
                    $this.removeClass('is-invalid').addClass('is-valid');
                }
            });
            
            // Email validation
            $('#Email').on('blur', function() {
                const email = $(this).val();
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                
                if (email && !emailRegex.test(email)) {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                } else if (email) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                }
            });
            
            // Phone number formatting
            $('input[type="tel"]').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.startsWith('234')) {
                    value = '+' + value;
                } else if (value.startsWith('0')) {
                    value = '+234' + value.substring(1);
                } else if (value.length > 0 && !value.startsWith('+')) {
                    value = '+234' + value;
                }
                $(this).val(value);
            });
            
            // Form submission handling
            $('#vendorRegistrationForm').on('submit', function(e) {
                const $submitBtn = $('#submitBtn');
                const $spinner = $('.loading-spinner');
                
                // Show loading state
                $submitBtn.prop('disabled', true);
                $spinner.show();
                
                // Simulate form processing (remove in production)
                setTimeout(function() {
                    if (!$(e.target)[0].checkValidity()) {
                        $submitBtn.prop('disabled', false);
                        $spinner.hide();
                    }
                }, 500);
            });
            
            // Auto-resize textarea
            textarea.on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
            
            // Progress indicator animation
            setTimeout(function() {
                $('.progress-step').first().addClass('active');
            }, 500);
            
            // Smooth scrolling to validation errors
            if ($('.invalid-feedback:visible').length > 0) {
                $('html, body').animate({
                    scrollTop: $('.invalid-feedback:visible').first().offset().top - 100
                }, 500);
            }
            
            // Real-time form progress tracking
            function updateProgress() {
                const totalFields = $('input[required], select[required], textarea[required]').length;
                const filledFields = $('input[required], select[required], textarea[required]').filter(function() {
                    return $(this).val().trim() !== '';
                }).length;
                
                const progress = Math.round((filledFields / totalFields) * 100);
                const steps = $('.progress-step');
                
                // Reset all steps
                steps.removeClass('active completed');
                
                if (progress > 0) {
                    steps.eq(0).addClass('active');
                }
                if (progress > 33) {
                    steps.eq(0).removeClass('active').addClass('completed');
                    steps.eq(1).addClass('active');
                }
                if (progress > 66) {
                    steps.eq(1).removeClass('active').addClass('completed');
                    steps.eq(2).addClass('active');
                }
                if (progress === 100) {
                    steps.eq(2).removeClass('active').addClass('completed');
                }
            }
            
            // Trigger progress update on input changes
            $('input, select, textarea').on('input change', updateProgress);
            
            // Initialize progress
            updateProgress();
            
            // Enhanced visual feedback for form interactions
            $('input, select, textarea').on('focus', function() {
                $(this).parent().addClass('focused');
            }).on('blur', function() {
                $(this).parent().removeClass('focused');
            });
            
            // Add floating labels effect
            $('input, textarea').on('input', function() {
                if ($(this).val().length > 0) {
                    $(this).addClass('has-content');
                } else {
                    $(this).removeClass('has-content');
                }
            });
            
            // Animate elements on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                    }
                });
            }, observerOptions);
            
            // Observe elements for animation
            document.querySelectorAll('.section').forEach(el => {
                observer.observe(el);
            });
            
            // Add pulse animation to required fields that are empty
            function highlightEmptyRequired() {
                $('input[required], select[required], textarea[required]').each(function() {
                    if (!$(this).val().trim()) {
                        $(this).addClass('pulse-required');
                        setTimeout(() => {
                            $(this).removeClass('pulse-required');
                        }, 1000);
                    }
                });
            }
            
            // Trigger highlight on form submit attempt
            $('#vendorRegistrationForm').on('invalid', function() {
                highlightEmptyRequired();
            });
            
            // Auto-save form data to prevent data loss (using sessionStorage)
            function saveFormData() {
                const formData = {};
                $('#vendorRegistrationForm').find('input, select, textarea').each(function() {
                    const name = $(this).attr('name');
                    const value = $(this).val();
                    if (name && value) {
                        formData[name] = value;
                    }
                });
                sessionStorage.setItem('vendorFormData', JSON.stringify(formData));
            }
            
            function loadFormData() {
                const savedData = sessionStorage.getItem('vendorFormData');
                if (savedData) {
                    const formData = JSON.parse(savedData);
                    Object.keys(formData).forEach(name => {
                        const field = $(`[name="${name}"]`);
                        if (field.length) {
                            field.val(formData[name]).trigger('input');
                        }
                    });
                }
            }
            
            // Auto-save every 30 seconds
            setInterval(saveFormData, 30000);
            
            // Save on form changes
            $('#vendorRegistrationForm').on('change input', 'input, select, textarea', function() {
                clearTimeout(window.autoSaveTimer);
                window.autoSaveTimer = setTimeout(saveFormData, 2000);
            });
            
            // Load saved data on page load
            loadFormData();
            
            // Clear saved data on successful form submission
            $('#vendorRegistrationForm').on('submit', function() {
                if (this.checkValidity()) {
                    sessionStorage.removeItem('vendorFormData');
                }
            });
        });
        
        // Add CSS for pulse animation
        const style = document.createElement('style');
        style.textContent = `
            .pulse-required {
                animation: pulseRed 0.5s ease-in-out;
            }
            
            @@keyframes pulseRed {
                0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4); }
                70% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
                100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
            }
            
            .focused {
                transform: scale(1.02);
                transition: transform 0.2s ease;
            }
            
            .has-content + .form-label {
                color: #667eea;
                font-weight: 600;
            }
        `;
        document.head.appendChild(style);
    </script>
