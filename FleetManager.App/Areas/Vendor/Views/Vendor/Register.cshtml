@using FleetManager.Business.DataObjects.VendorDto;
@model VendorOnboardingDto
@{
    ViewData["Title"] = "Vendor Registration - Fleet Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .registration-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 0;
            position: relative;
            overflow: hidden;
        }
        
        .registration-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
        }
        
        .hero-content {
            position: relative;
            z-index: 1;
        }
        
        .registration-container {
            max-width: 800px;
            margin: -50px auto 0;
            position: relative;
            z-index: 2;
        }
        
        .registration-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
            overflow: hidden;
            border: none;
        }
        
        .registration-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 40px;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }
        
        .registration-header h2 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 10px;
            font-size: 2rem;
        }
        
        .registration-header p {
            color: #6c757d;
            font-size: 1.1rem;
            margin: 0;
        }
        
        .registration-body {
            padding: 40px;
        }
        
        .form-section {
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 1px solid #f1f3f4;
        }
        
        .form-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }
        
        .section-title {
            color: #2c3e50;
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }
        
        .section-title i {
            margin-right: 10px;
            color: #667eea;
            width: 24px;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            display: block;
        }
        
        .required-field::after {
            content: '*';
            color: #e74c3c;
            margin-left: 4px;
        }
        
        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: #fafbfc;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background-color: white;
        }
        
        .form-control.is-invalid {
            border-color: #e74c3c;
            background-color: #fdf2f2;
        }
        
        .form-control.is-valid {
            border-color: #27ae60;
            background-color: #f2fdf5;
        }
        
        .invalid-feedback {
            display: block;
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 5px;
        }
        
        .form-text {
            color: #6c757d;
            font-size: 0.875rem;
            margin-top: 5px;
        }
        
        .textarea-container {
            position: relative;
        }
        
        .textarea-counter {
            position: absolute;
            bottom: 10px;
            right: 15px;
            font-size: 0.75rem;
            color: #6c757d;
            background: rgba(255,255,255,0.9);
            padding: 2px 6px;
            border-radius: 4px;
        }
        
        .btn-register {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            border: none;
            border-radius: 8px;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
            width: 100%;
        }
        
        .btn-register:hover {
            background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
            color: white;
        }
        
        .btn-register:disabled {
            background: #95a5a6;
            transform: none;
            box-shadow: none;
            cursor: not-allowed;
        }
        
        .benefits-sidebar {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 30px;
            margin-top: 40px;
        }
        
        .benefit-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
        }
        
        .benefit-item:last-child {
            margin-bottom: 0;
        }
        
        .benefit-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            flex-shrink: 0;
        }
        
        .benefit-icon i {
            color: white;
            font-size: 1.2rem;
        }
        
        .benefit-content h5 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .benefit-content p {
            color: #6c757d;
            font-size: 0.9rem;
            margin: 0;
        }
        
        .progress-indicator {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
        }
        
        .progress-step {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 10px;
            font-weight: 600;
            color: #6c757d;
            position: relative;
        }
        
        .progress-step.active {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }
        
        .progress-step::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 100%;
            width: 20px;
            height: 2px;
            background: #e9ecef;
            transform: translateY(-50%);
        }
        
        .progress-step:last-child::after {
            display: none;
        }
        
        .loading-spinner {
            display: none;
            margin-right: 10px;
        }
        
        @@media (max-width: 768px) {
            .registration-hero {
                padding: 40px 0;
            }
            
            .registration-container {
                margin: -30px 15px 0;
            }
            
            .registration-header,
            .registration-body {
                padding: 30px 20px;
            }
            
            .benefits-sidebar {
                margin-top: 30px;
                padding: 20px;
            }
        }
    </style>


<!-- Registration Hero -->
<div class="registration-hero">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="display-5 fw-bold mb-3">Join Our Vendor Network</h1>
            <p class="lead">Connect with clients and grow your business through our trusted platform</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="registration-container">
        <div class="card registration-card">
            <div class="registration-header">
                <h2>Vendor Registration</h2>
                <p>Fill out the form below to become a verified vendor partner</p>
                
                <!-- Progress Indicator -->
                <div class="progress-indicator mt-4">
                    <div class="progress-step active">1</div>
                    <div class="progress-step">2</div>
                    <div class="progress-step">3</div>
                </div>
            </div>
            
            <div class="registration-body">
                <form asp-action="Register" method="post" id="vendorRegistrationForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Personal Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-user"></i>
                            Personal Information
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label required-field">First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                    <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label required-field">Last Name</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                    <span asp-validation-for="LastName" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label required-field">Email Address</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="your.email@example.com" />
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    <div class="form-text">We'll use this for account notifications and client communications</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label required-field">Phone Number</label>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+234 xxx xxx xxxx" />
                                    <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Business Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-building"></i>
                            Business Information
                        </h3>
                        
                        <div class="form-group">
                            <label asp-for="VendorName" class="form-label required-field">Business/Vendor Name</label>
                            <input asp-for="VendorName" class="form-control" placeholder="Enter your business name" />
                            <span asp-validation-for="VendorName" class="invalid-feedback"></span>
                            <div class="form-text">This will be displayed as your business name to clients</div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VendorCategoryId" class="form-label required-field">Service Category</label>
                                    <select asp-for="VendorCategoryId" class="form-select">
                                        <option value="">Select a category</option>
                                        <option value="1">Transportation Services</option>
                                        <option value="2">Maintenance & Repair</option>
                                        <option value="3">Fleet Management</option>
                                        <option value="4">Insurance Services</option>
                                        <option value="5">Fuel Services</option>
                                        <option value="6">Technology Solutions</option>
                                        <option value="7">Consulting Services</option>
                                        <option value="8">Parts & Supplies</option>
                                        <option value="9">Training & Education</option>
                                        <option value="10">Other Services</option>
                                    </select>
                                    <span asp-validation-for="VendorCategoryId" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactPerson" class="form-label required-field">Primary Contact Person</label>
                                    <input asp-for="ContactPerson" class="form-control" placeholder="Contact person name" />
                                    <span asp-validation-for="ContactPerson" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ContactPersonPhone" class="form-label required-field">Contact Person Phone</label>
                            <input asp-for="ContactPersonPhone" type="tel" class="form-control" placeholder="+234 xxx xxx xxxx" />
                            <span asp-validation-for="ContactPersonPhone" class="invalid-feedback"></span>
                            <div class="form-text">Direct phone number for the primary contact person</div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Business Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter your business address" />
                            <span asp-validation-for="Address" class="invalid-feedback"></span>
                            <div class="form-text">Optional: Helps clients find local vendors</div>
                        </div>
                    </div>
                    
                    <!-- Services Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-briefcase"></i>
                            Services & Expertise
                        </h3>
                        
                        <div class="form-group">
                            <label asp-for="VendorServiceOffered" class="form-label required-field">Services Offered</label>
                            <div class="textarea-container">
                                <textarea asp-for="VendorServiceOffered" class="form-control" rows="6" 
                                         placeholder="Describe the services you offer in detail. Include your specialties, experience, and what makes your business unique. This information will be displayed to potential clients." 
                                         maxlength="1000" id="servicesTextarea"></textarea>
                                <div class="textarea-counter">
                                    <span id="charCount">0</span>/1000
                                </div>
                            </div>
                            <span asp-validation-for="VendorServiceOffered" class="invalid-feedback"></span>
                            <div class="form-text">
                                <strong>Tips:</strong> Mention your key services, years of experience, certifications, coverage areas, and unique value propositions.
                            </div>
                        </div>
                    </div>
                    
                    <!-- Registration Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-certificate"></i>
                            Registration Details
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CACRegistrationNo" class="form-label">CAC Registration Number</label>
                                    <input asp-for="CACRegistrationNo" class="form-control" placeholder="e.g. RC123456" />
                                    <span asp-validation-for="CACRegistrationNo" class="invalid-feedback"></span>
                                    <div class="form-text">Optional: Corporate Affairs Commission registration number</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TaxIdNumber" class="form-label">Tax ID Number</label>
                                    <input asp-for="TaxIdNumber" class="form-control" placeholder="Enter your tax ID" />
                                    <span asp-validation-for="TaxIdNumber" class="invalid-feedback"></span>
                                    <div class="form-text">Optional: Helps with business verification</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-register" id="submitBtn">
                            <span class="loading-spinner">
                                <i class="fas fa-spinner fa-spin"></i>
                            </span>
                            <i class="fas fa-rocket me-2"></i>
                            Complete Registration
                        </button>
                        <p class="mt-3 text-muted">
                            <small>
                                <i class="fas fa-shield-alt me-1"></i>
                                Your information is secure and will be reviewed before activation
                            </small>
                        </p>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Benefits Sidebar -->
        <div class="benefits-sidebar">
            <h4 class="mb-4 text-center">
                <i class="fas fa-star text-warning me-2"></i>
                Why Join Our Network?
            </h4>
            
            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="benefit-content">
                    <h5>Quality Leads</h5>
                    <p>Connect with serious clients actively seeking your services</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="benefit-content">
                    <h5>Verified Status</h5>
                    <p>Get a verified badge that builds trust with potential clients</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="benefit-content">
                    <h5>Business Growth</h5>
                    <p>Expand your reach and grow your client base effectively</p>
                </div>
            </div>
            
            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="benefit-content">
                    <h5>Dedicated Support</h5>
                    <p>Get help from our team to optimize your vendor profile</p>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function() {
            // Character counter for services textarea
            const textarea = $('#servicesTextarea');
            const charCount = $('#charCount');
            
            textarea.on('input', function() {
                const currentLength = $(this).val().length;
                charCount.text(currentLength);
                
                if (currentLength > 900) {
                    charCount.parent().addClass('text-warning');
                } else {
                    charCount.parent().removeClass('text-warning');
                }
            });
            
            // Form validation enhancement
            $('input, select, textarea').on('blur', function() {
                const $this = $(this);
                const value = $this.val().trim();
                
                if ($this.prop('required') && !value) {
                    $this.addClass('is-invalid');
                } else if (value) {
                    $this.removeClass('is-invalid').addClass('is-valid');
                }
            });
            
            // Email validation
            $('#Email').on('blur', function() {
                const email = $(this).val();
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                
                if (email && !emailRegex.test(email)) {
                    $(this).addClass('is-invalid');
                } else if (email) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                }
            });
            
            // Phone validation
            $('input[type="tel"]').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.startsWith('234')) {
                    value = '+' + value;
                } else if (value.startsWith('0')) {
                    value = '+234' + value.substring(1);
                } else if (value.length > 0 && !value.startsWith('+')) {
                    value = '+234' + value;
                }
                $(this).val(value);
            });
            
            // Form submission handling
            $('#vendorRegistrationForm').on('submit', function(e) {
                const $submitBtn = $('#submitBtn');
                const $spinner = $('.loading-spinner');
                
                // Show loading state
                $submitBtn.prop('disabled', true);
                $spinner.show();
                
                // Simulate form processing (remove in production)
                setTimeout(function() {
                    if (!$(e.target)[0].checkValidity()) {
                        $submitBtn.prop('disabled', false);
                        $spinner.hide();
                    }
                }, 500);
            });
            
            // Auto-resize textarea
            textarea.on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
            
            // Progress indicator animation
            setTimeout(function() {
                $('.progress-step').first().addClass('active');
            }, 500);
            
            // Smooth scrolling to validation errors
            if ($('.invalid-feedback:visible').length > 0) {
                $('html, body').animate({
                    scrollTop: $('.invalid-feedback:visible').first().offset().top - 100
                }, 500);
            }
        });
        
        // Real-time form progress
        function updateProgress() {
            const totalFields = $('input[required], select[required], textarea[required]').length;
            const filledFields = $('input[required], select[required], textarea[required]').filter(function() {
                return $(this).val().trim() !== '';
            }).length;
            
            const progress = Math.round((filledFields / totalFields) * 100);
            
            if (progress > 33) {
                $('.progress-step').eq(1).addClass('active');
            }
            if (progress > 66) {
                $('.progress-step').eq(2).addClass('active');
            }
        }
        
        $('input, select, textarea').on('input change', updateProgress);
    </script>

