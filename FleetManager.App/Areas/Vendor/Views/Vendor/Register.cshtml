    <script>
        $(document).ready(function() {
            // Character counter for services textarea
            $('#servicesTextarea').on('input', function() {
                const currentLength = $(this).val().length;
                $('#charCount').text(currentLength);
                
                if (currentLength >= 950) {
                    $(this).addClass('is-warning');
                } else {
                    $(this).removeClass('is-warning');
                }
            });

            // Form submission handling
            $('#vendorRegistrationForm').on('submit', function(e) {
                const submitButton = $(this).find('.submit-button');
                submitButton.addClass('loading').prop('disabled', true);
                
                // Simulate form processing (remove this in production)
                setTimeout(function() {
                    submitButton.removeClass('loading').prop('disabled', false);
                }, 3000);
            });

            // State and City handling
            $('#StateId').on('change', function() {
                const stateId = $(this).val();
                // In a real application, you would fetch cities for the selected state
                // This is just a placeholder for the functionality
                console.log('Selected state:', stateId);
            });

            // Progress indicator functionality for multi-step forms
            // Currently just visual, would need to be connected to actual steps
            $('.progress-step').on('click', function() {
                $('.progress-step').removeClass('active');
                $(this).addClass('active');
            });

            // Input validation styling
            $('.form-control, .form-select').on('blur', function() {
                if ($(this).val().trim() === '') {
                    $(this).removeClass('is-valid');
                } else {
                    $(this).addClass('is-valid');
                }
            });

            // Phone number formatting
            $('input[type="tel"]').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    value = '+' + value;
                }
                $(this).val(value);
            });

            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                $('html, body').animate({
                    scrollTop: $($(this).attr('href')).offset().top - 80
                }, 500);
            });

            // Initialize character count
            $('#servicesTextarea').trigger('input');
        });

        // Form validation (would be enhanced with actual validation logic)
        function validateForm() {
            let isValid = true;
            
            $('.required-field').each(function() {
                const inputId = $(this).attr('for');
                const input = $('#' + inputId);
                
                if (input.val().trim() === '') {
                    input.addClass('is-invalid');
                    isValid = false;
                } else {
                    input.removeClass('is-invalid');
                }
            });
            
            return isValid;
        }
    </script>
