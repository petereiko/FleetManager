@{
    ViewData["Title"] = "Session Expired";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #333;
        }

        .session-expired-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            padding: 3rem 2rem;
            text-align: center;
            max-width: 500px;
            width: 90%;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .icon-container {
            background: linear-gradient(135deg, #ffd93d, #ff6b35);
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            box-shadow: 0 10px 30px rgba(255, 107, 53, 0.3);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        .clock-icon {
            width: 40px;
            height: 40px;
            fill: white;
        }

        .title {
            color: #2d3748;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            letter-spacing: -0.025em;
        }

        .subtitle {
            color: #4a5568;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .timeout-message {
            background: rgba(255, 211, 61, 0.1);
            border: 1px solid rgba(255, 211, 61, 0.3);
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 2rem;
            color: #d69e2e;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .login-btn {
            background: linear-gradient(135deg, #f093fb, #f5576c);
            color: white;
            padding: 0.875rem 2rem;
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(240, 147, 251, 0.4);
            margin-top: 1rem;
        }

            .login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(240, 147, 251, 0.6);
                text-decoration: none;
                color: white;
            }

        .session-info {
            background: rgba(74, 85, 104, 0.05);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1.5rem;
            color: #718096;
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .session-code {
            background: rgba(255, 211, 61, 0.1);
            color: #d69e2e;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(214, 158, 46, 0.2);
        }

        .countdown {
            font-weight: 600;
            color: #f5576c;
        }

        @@media (max-width: 768px) {
            .session-expired-container

        {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .title {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 1rem;
        }

        }
    </style>
   
</head>
<body>
    <div class="session-expired-container">
        <div class="icon-container">
            <svg class="clock-icon" viewBox="0 0 24 24">
                <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.7L16.2,16.2Z" />
            </svg>
        </div>

        <div class="session-code">SESSION TIMEOUT</div>

        <h1 class="title">Session Expired</h1>
        <p class="subtitle">You have been logged out due to inactivity.</p>

        <div class="timeout-message">
            <strong>Security Notice:</strong> For your protection, your session has expired after a period of inactivity. Please sign in again to continue.
        </div>

        <a href="@Url.Action("Login", "Account")" class="login-btn">Sign In Again</a>

        <div class="session-info">
            <p><strong>Why did this happen?</strong></p>
            <p>Sessions automatically expire after a period of inactivity to protect your account and data. This is a standard security measure.</p>
            <p>You will be automatically redirected to sign in in <span id="countdown" class="countdown">60</span> seconds.</p>
        </div>
    </div>


    <script>
        // Optional: Auto-redirect after 60 seconds
        let countdown = 60;
        function updateCountdown() {
            const countdownElement = document.getElementById('countdown');
            if (countdownElement) {
                countdownElement.textContent = countdown;
                countdown--;

                if (countdown < 0) {
                    window.location.href = '@Url.Action("Login", "Account")';
                }
            }
        }

        // Start countdown when page loads
        window.onload = function() {
            if (document.getElementById('countdown')) {
                setInterval(updateCountdown, 1000);
            }
        };
    </script>
</body>
</html>