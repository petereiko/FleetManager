@using FleetManager.Business.ViewModels
@model FineTollInputViewModel
@{
    ViewData["Title"] = "Log New Fine or Toll";
}

<style>
    .form-floating > .form-select {
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

    .form-floating > label {
        opacity: 0.65;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-select ~ label {
        opacity: 0.65;
        transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #ced4da;
        font-weight: 600;
    }

    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .progress-step {
        transition: all 0.3s ease;
    }

    .is-invalid {
        border-color: #dc3545;
    }

    .invalid-feedback {
        display: block;
        font-size: 0.875em;
        color: #dc3545;
    }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .form-text {
        font-size: 0.875em;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>


<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <div>
                    <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                    <p class="text-muted mb-0">Record a new fine or toll charge for tracking and management</p>
                </div>
            </div>

            <!-- Progress Indicator -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body py-3">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="bg-primary rounded-circle p-2 me-2">
                                    <i class="fas fa-car text-white"></i>
                                </div>
                                <span class="small text-muted">Vehicle Info</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="bg-primary rounded-circle p-2 me-2">
                                    <i class="fas fa-file-invoice text-white"></i>
                                </div>
                                <span class="small text-muted">Violation Details</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="bg-primary rounded-circle p-2 me-2">
                                    <i class="fas fa-naira-sign text-white"></i>
                                </div>
                                <span class="small text-muted">Financial Info</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="bg-primary rounded-circle p-2 me-2">
                                    <i class="fas fa-check text-white"></i>
                                </div>
                                <span class="small text-muted">Review & Submit</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Create" method="post" id="fineForm" novalidate>
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Please correct the following errors:</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Vehicle Information Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-car text-primary me-2"></i>Vehicle Information
                        </h5>
                        <small class="text-muted">Select the vehicle associated with this fine or toll</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.VehicleId" class="form-select @(ViewData.ModelState["Input.VehicleId"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                            id="vehicleSelect" asp-items="Model.Vehicles">
                                        <option value="">-- Select Vehicle --</option>
                                    </select>
                                    <label for="vehicleSelect">
                                        <i class="fas fa-car me-2"></i>Vehicle
                                    </label>
                                    <span asp-validation-for="Input.VehicleId" class="invalid-feedback"></span>
                                </div>
                                <div class="alert alert-info d-none" id="vehicleInfo">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <span id="vehicleDetails"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Violation Details Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice text-primary me-2"></i>Violation Details
                        </h5>
                        <small class="text-muted">Provide details about the fine or toll charge</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.Type" class="form-select @(ViewData.ModelState["Input.Type"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                            id="typeSelect" asp-items="Model.Types">
                                    </select>
                                    <label for="typeSelect">
                                        <i class="fas fa-tag me-2"></i>Type of Violation
                                    </label>
                                    <span asp-validation-for="Input.Type" class="invalid-feedback"></span>
                                </div>
                            </div>
@*                             <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.DateLogged" type="date" class="form-control @(ViewData.ModelState["Input.DateLogged"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                           id="dateLogged" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                    <label for="dateLogged">
                                        <i class="fas fa-calendar me-2"></i>Date Occurred
                                    </label>
                                    <span asp-validation-for="Input.DateLogged" class="invalid-feedback"></span>
                                </div>
                            </div>
 *@                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Title" class="form-control @(ViewData.ModelState["Input.Title"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                           id="titleInput" placeholder="e.g., Speeding Violation, Toll Charge">
                                    <label for="titleInput">
                                        <i class="fas fa-edit me-2"></i>Title/Description
                                    </label>
                                    <span asp-validation-for="Input.Title" class="invalid-feedback"></span>
                                    <div class="form-text">Brief description of the fine or toll charge</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Input.Reason" class="form-control @(ViewData.ModelState["Input.Reason"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                              id="reasonTextarea" style="height: 100px" placeholder="Provide detailed reason for the fine or toll..."></textarea>
                                    <label for="reasonTextarea">
                                        <i class="fas fa-clipboard-list me-2"></i>Reason/Details
                                    </label>
                                    <span asp-validation-for="Input.Reason" class="invalid-feedback"></span>
                                    <div class="form-text">Detailed explanation of what led to this charge</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Financial Information Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-naira-sign text-primary me-2"></i>Financial Information
                        </h5>
                        <small class="text-muted">Enter the amount and payment responsibility</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-floating mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text">₦</span>
                                        <input asp-for="Input.Amount" type="number" step="0.01" min="0"
                                               class="form-control @(ViewData.ModelState["Input.Amount"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               id="amountInput" placeholder="0.00">
                                        <span class="input-group-text">NGN</span>
                                    </div>
                                    <span asp-validation-for="Input.Amount" class="invalid-feedback d-block"></span>
                                    <div class="form-text">Enter the total amount of the fine or toll</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="Currency" class="form-control" id="currencyInput" readonly>
                                    <label for="currencyInput">
                                        <i class="fas fa-money-bill me-2"></i>Currency
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="Input.IsMinimal" class="form-check-input" type="checkbox" id="isMinimalSwitch">
                                            <label class="form-check-label" for="isMinimalSwitch">
                                                <i class="fas fa-user me-2"></i>I will cover this expense personally
                                            </label>
                                            <div class="form-text mt-1">
                                                Check this if you will pay for this fine/toll from your own funds,
                                                rather than company reimbursement.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Notes Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-sticky-note text-primary me-2"></i>Additional Notes
                        </h5>
                        <small class="text-muted">Any additional information or context (optional)</small>
                    </div>
                    <div class="card-body">
                        <div class="form-floating">
                            <textarea asp-for="Input.Notes" class="form-control @(ViewData.ModelState["Input.Notes"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                      id="notesTextarea" style="height: 120px" placeholder="Add any additional notes or context..."></textarea>
                            <label for="notesTextarea">
                                <i class="fas fa-comment me-2"></i>Additional Notes
                            </label>
                            <span asp-validation-for="Input.Notes" class="invalid-feedback"></span>
                            <div class="form-text">Optional: Any additional context, reference numbers, or comments</div>
                        </div>
                    </div>
                </div>

                <!-- Summary Preview -->
                <div class="card border-0 shadow-sm mb-4" id="summaryCard" style="display: none;">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-eye me-2"></i>Summary Preview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Vehicle:</dt>
                                    <dd class="col-sm-8" id="summaryVehicle">-</dd>
                                    <dt class="col-sm-4">Type:</dt>
                                    <dd class="col-sm-8" id="summaryType">-</dd>
                                    <dt class="col-sm-4">Title:</dt>
                                    <dd class="col-sm-8" id="summaryTitle">-</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Amount:</dt>
                                    <dd class="col-sm-8" id="summaryAmount">₦0.00</dd>
                                    <dt class="col-sm-4">Date:</dt>
                                    <dd class="col-sm-8" id="summaryDate">-</dd>
                                    <dt class="col-sm-4">Personal:</dt>
                                    <dd class="col-sm-8" id="summaryPersonal">No</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    All fields marked with * are required
                                </small>
                            </div>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>Log Fine/Toll
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form elements
            const form = document.getElementById('fineForm');
            const vehicleSelect = document.getElementById('vehicleSelect');
            const typeSelect = document.getElementById('typeSelect');
            const titleInput = document.getElementById('titleInput');
            const amountInput = document.getElementById('amountInput');
            const dateInput = document.getElementById('dateLogged');
            const isMinimalSwitch = document.getElementById('isMinimalSwitch');
            const summaryCard = document.getElementById('summaryCard');
            const submitBtn = document.getElementById('submitBtn');

            // Summary elements
            const summaryVehicle = document.getElementById('summaryVehicle');
            const summaryType = document.getElementById('summaryType');
            const summaryTitle = document.getElementById('summaryTitle');
            const summaryAmount = document.getElementById('summaryAmount');
            //const summaryDate = document.getElementById('summaryDate');
            const summaryPersonal = document.getElementById('summaryPersonal');

            // Vehicle info
            const vehicleInfo = document.getElementById('vehicleInfo');
            const vehicleDetails = document.getElementById('vehicleDetails');

            // Real-time form validation
            function validateForm() {
                const isValid = form.checkValidity();
                submitBtn.disabled = !isValid;

                if (isValid) {
                    submitBtn.classList.remove('btn-outline-success');
                    submitBtn.classList.add('btn-success');
                } else {
                    submitBtn.classList.remove('btn-success');
                    submitBtn.classList.add('btn-outline-success');
                }

                return isValid;
            }

            // Update summary preview
            function updateSummary() {
                const hasRequiredData = vehicleSelect.value && typeSelect.value && titleInput.value.trim();

                if (hasRequiredData) {
                    summaryCard.style.display = 'block';

                    // Update summary values
                    summaryVehicle.textContent = vehicleSelect.options[vehicleSelect.selectedIndex]?.text || '-';
                    summaryType.textContent = typeSelect.options[typeSelect.selectedIndex]?.text || '-';
                    summaryTitle.textContent = titleInput.value.trim() || '-';

                    const amount = parseFloat(amountInput.value) || 0;
                    summaryAmount.textContent = new Intl.NumberFormat('en-NG', {
                        style: 'currency',
                        currency: 'NGN'
                    }).format(amount);

                    // const date = new Date(dateInput.value);
                    // summaryDate.textContent = date.toLocaleDateString('en-NG', {
                    //     year: 'numeric',
                    //     month: 'long',
                    //     day: 'numeric'
                    // });

                    summaryPersonal.textContent = isMinimalSwitch.checked ? 'Yes' : 'No';
                    summaryPersonal.className = isMinimalSwitch.checked ? 'text-success fw-bold' : 'text-muted';
                } else {
                    summaryCard.style.display = 'none';
                }
            }

            // Auto-generate title based on type
            function autoGenerateTitle() {
                if (!titleInput.value.trim() && typeSelect.value) {
                    const typeText = typeSelect.options[typeSelect.selectedIndex].text;
                    const vehicleText = vehicleSelect.options[vehicleSelect.selectedIndex]?.text;

                    if (vehicleText && vehicleText !== '-- Select Vehicle --') {
                        titleInput.value = `${typeText} - ${vehicleText}`;
                        updateSummary();
                    }
                }
            }

            // Show vehicle info
            function showVehicleInfo() {
                if (vehicleSelect.value) {
                    const vehicleText = vehicleSelect.options[vehicleSelect.selectedIndex].text;
                    vehicleDetails.textContent = `Selected: ${vehicleText}`;
                    vehicleInfo.classList.remove('d-none');
                } else {
                    vehicleInfo.classList.add('d-none');
                }
            }

            // Format amount input
            function formatAmount() {
                const value = parseFloat(amountInput.value);
                if (!isNaN(value) && value > 0) {
                    amountInput.value = value.toFixed(2);
                }
            }

            // Event listeners
            [vehicleSelect, typeSelect, titleInput, amountInput, dateInput, isMinimalSwitch].forEach(element => {
                element.addEventListener('change', function() {
                    updateSummary();
                    validateForm();
                });

                if (element.type !== 'checkbox' && element.tagName !== 'SELECT') {
                    element.addEventListener('input', function() {
                        updateSummary();
                        validateForm();
                    });
                }
            });

            vehicleSelect.addEventListener('change', function() {
                showVehicleInfo();
                autoGenerateTitle();
            });

            typeSelect.addEventListener('change', autoGenerateTitle);
            amountInput.addEventListener('blur', formatAmount);

            // Form submission with loading state
            form.addEventListener('submit', function(e) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Submitting...';
                submitBtn.disabled = true;
            });

            // Initialize
            validateForm();
            updateSummary();
            showVehicleInfo();

            // Auto-save to localStorage (optional enhancement)
            const formData = {};
            function saveFormData() {
                formData.vehicleId = vehicleSelect.value;
                formData.type = typeSelect.value;
                formData.title = titleInput.value;
                formData.amount = amountInput.value;
                formData.date = dateInput.value;
                formData.isMinimal = isMinimalSwitch.checked;

                // Note: Not using localStorage as per instructions, but this could be implemented
                // if browser storage was available
            }

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Ctrl/Cmd + Enter to submit
                if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                    if (validateForm()) {
                        form.submit();
                    }
                }

                // Escape to cancel
                if (e.key === 'Escape') {
                    if (confirm('Are you sure you want to cancel? Any unsaved changes will be lost.')) {
                        window.location.href = '@Url.Action("Index")';
                    }
                }
            });

            // Prevent accidental page leave
            let formChanged = false;
            [vehicleSelect, typeSelect, titleInput, amountInput, dateInput, isMinimalSwitch].forEach(element => {
                element.addEventListener('change', function() {
                    formChanged = true;
                });
            });

            window.addEventListener('beforeunload', function(e) {
                if (formChanged && !submitBtn.disabled) {
                    e.preventDefault();
                    e.returnValue = '';
                }
            });
        });
    </script>
