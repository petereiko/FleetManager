<!-- Loading Overlay -->
<div id="loadingOverlay" class="d-none position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" 
     style="background: rgba(0,0,0,0.5); z-index: 9999;">
    <div class="text-center text-white">
        <div class="spinner-border text-light mb-2" role="status"></div>
        <div>Loading parts...</div>
    </div>
</div>

<!-- Required Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

<script>
    $(function() { 
        // Serialize category options for dynamic rows
        var categoryOptionsHtml = '@Html.Raw(string.Join("", Model.PartCategories.Select(c => $"<option value=\"{c.Value}\">{c.Text}</option>")))'; 

        // Function to update row indices
        function updateRowIndices() {
            $('#itemsTable tbody tr:not(#emptyRow)').each(function(i) {
                $(this).attr('data-index', i);
                $(this).find('select, input').each(function() {
                    var name = $(this).attr('name');
                    if (name) {
                        var newName = name.replace(/Items\[\d+\]/, `Items[${i}]`);
                        $(this).attr('name', newName);
                    }
                });
            });
        }

        // Function to toggle empty row visibility
        function toggleEmptyRow() {
            var hasItems = $('#itemsTable tbody tr:not(#emptyRow)').length > 0;
            $('#emptyRow').toggleClass('d-none', hasItems);
        }

        // Add new item row
        $('#addItem').on('click', function() { 
            var idx = $('#itemsTable tbody tr:not(#emptyRow)').length; 
            var row = `
                <tr data-index="${idx}" class="item-row">
                    <td>
                        <select name="Items[${idx}].PartCategoryId" class="form-select part-category">
                            <option value="">-- Select Category --</option>
                            ${categoryOptionsHtml}
                        </select>
                    </td>
                    <td>
                        <select name="Items[${idx}].PartId" class="form-select part-list" disabled>
                            <option value="">-- Select Part --</option>
                        </select>
                    </td>
                    <td>
                        <input name="Items[${idx}].CustomDescription" class="form-control" 
                               placeholder="Custom description..." />
                    </td>
                    <td>
                        <input name="Items[${idx}].Quantity" type="number" min="1" value="1" class="form-control text-center"
                               placeholder="1" />
                    </td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-text">₦</span>
                            <input name="Items[${idx}].UnitPrice" type="number" step="0.01" class="form-control"
                                   placeholder="0.00" />
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-danger btn-sm removeItem" title="Remove Item">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            `;
            
            if ($('#emptyRow').length) {
                $('#emptyRow').before(row);
            } else {
                $('#itemsTable tbody').append(row);
            }
            
            toggleEmptyRow();
        }); 

        // Remove item row
        $(document).on('click', '.removeItem', function() { 
            $(this).closest('tr').fadeOut(300, function() {
                $(this).remove();
                updateRowIndices();
                toggleEmptyRow();
            });
        });

        // Load parts when category changes
        $(document).on('change', '.part-category', function() { 
            var $row = $(this).closest('tr'); 
            var catId = $(this).val(); 
            var $part = $row.find('.part-list'); 
            
            if (!catId) { 
                $part.html('<option value="">-- Select Part --</option>').prop('disabled', true); 
                return; 
            }

            // Show loading state
            $part.prop('disabled', true).html('<option value="">Loading...</option>'); 
            $('#loadingOverlay').removeClass('d-none');
            
            $.getJSON('@Url.Action("GetPartsByCategory", "DriverMaintenance")', { categoryId: catId }) 
                .done(function(items) { 
                    $part.html('<option value="">-- Select Part --</option>'); 
                    if (items && items.length > 0) {
                        items.forEach(function(item) { 
                            $part.append(`<option value="${item.value}">${item.text}</option>`);
                        });
                        $part.prop('disabled', false);
                    } else {
                        $part.html('<option value="">No parts available</option>');
                    }
                }) 
                .fail(function(xhr, status, error) { 
                    console.error('Failed to load parts:', error);
                    $part.html('<option value="">Error loading parts</option>');
                    // Show user-friendly error message
                    if (typeof toastr !== 'undefined') {
                        toastr.error('Could not load parts for the selected category. Please try again.');
                    } else {
                        alert('Could not load parts for the selected category. Please try again.');
                    }
                }) 
                .always(function() { 
                    $('#loadingOverlay').addClass('d-none');
                }); 
        });

        // Initialize empty row visibility
        toggleEmptyRow();

        // Form validation enhancement
        $('#maintenanceForm').on('submit', function(e) {
            var hasValidation = $(this).valid();
            if (!hasValidation) {
                // Scroll to first error
                var firstError = $('.text-danger:visible').first();
                if (firstError.length) {
                    $('html, body').animate({
                        scrollTop: firstError.closest('.mb-3, .col-md-6').offset().top - 100
                    }, 500);
                }
            }
        });

        // Auto-resize textarea
        $('textarea').on('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    }); 
</script>














