                                            {
                                                @for (int i = 0; i < Model.Items.Count; i++)
                                                {
                                                    <tr data-index="@i" class="item-row">
                                                        <td>
                                                            <select name="Items[@i].PartCategoryId" class="form-select part-category">
                                                                <option value="">-- Select Category --</option>
                                                                @foreach (var c in Model.PartCategories)
                                                                {
                                                                    <option value="@c.Value">@c.Text</option>
                                                                }
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <select name="Items[@i].PartId" class="form-select part-list" disabled>
                                                                <option value="">-- Select Part --</option>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <input name="Items[@i].CustomDescription" class="form-control" 
                                                                   placeholder="Custom description..." />
                                                        </td>
                                                        <td>
                                                            <input name="Items[@i].Quantity" type="number" min="1" class="form-control text-center" 
