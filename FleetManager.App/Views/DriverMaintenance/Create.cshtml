                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Maintenance Request Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="maintenanceForm">
                        <input asp-for="DriverId" type="hidden" />

                        <!-- Basic Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary fw-bold mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Basic Information
                                </h6>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="VehicleId" class="form-label fw-semibold">
                                    <i class="fas fa-car me-1 text-primary"></i>Vehicle <span class="text-danger">*</span>
                                </label>
                                <select asp-for="VehicleId" class="form-select form-select-lg">
                                    <option value="">-- Select Vehicle --</option>
                                    @foreach (var v in Model.Vehicles)
                                    {
                                        <option value="@v.Value">@v.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="VehicleId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Subject" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-1 text-primary"></i>Subject <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Subject" class="form-control form-control-lg" placeholder="Brief description…" />
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>

                            <!-- New Priority field -->
                            @* <div class="col-md-4 mb-3">
                                <label asp-for="Priority" class="form-label fw-semibold">
                                    <i class="fas fa-exclamation-circle me-1 text-primary"></i>Priority <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Priority" asp-items="Model.Priorities" class="form-select form-select-lg">
                                    <option value="">-- Select Urgency --</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger small"></span>
                            </div> *@


