@using FleetManager.Business.ViewModels.MaintenanceViewModels
@model MaintenanceTicketListViewModel
@{
    ViewData["Title"] = "My Maintenance Tickets";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Ticket
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Ticket #</th>
            <th>Date</th>
            <th>Vehicle</th>
            <th>Subject</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Tickets)
        {
            <tr>
                <td>@t.Id</td>
                <td>
                    <span title="@t.CreatedAt.ToString("yyyy‑MM‑dd HH:mm")">
                        @t.CreatedAt.ToString("yyyy‑MM‑dd")
                    </span>
                </td>
                <td>@t.VehicleDescription</td>
                <td>@t.Subject</td>
                <td>
                    <span class="badge badge-status-@t.Status">
                        @t.Status
                    </span>
                </td>
                <td class="text-end">
                    <a asp-area="" asp-action="Details"
                       asp-route-id="@t.Id"
                       class="btn btn-sm btn-outline-secondary"
                       title="View details">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Pagination.TotalPages > 1)
{
    <nav aria-label="Tickets paging">
        <ul class="pagination justify-content-center">
            @for (int p = 1; p <= Model.Pagination.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Pagination.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p">
                        @p
                    </a>
                </li>
            }
        </ul>
    </nav>
}

    <style>
        /* Row hover highlight */
        table.table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }

        /* Status badge colors */
        .badge-status-Pending {
            background-color: #ffc107;
            color: #212529;
        }

        .badge-status-InProgress {
            background-color: #17a2b8;
            color: white;
        }

        .badge-status-Resolved {
            background-color: #28a745;
            color: white;
        }

        .badge-status-Rejected {
            background-color: #dc3545;
            color: white;
        }

        /* If you have other statuses, add them here... */
    </style>

