        minDate: "today",
        allowInput: true,
        altInput: true,
        altFormat: "F j, Y"
    });

    // AJAX form submission with enhanced feedback
    $('#timeOffForm').on('submit', function(e) {
        e.preventDefault();
        var $f = $(this);
        var $submitBtn = $f.find('button[type="submit"]');
        var originalText = $submitBtn.html();

        // Show loading state
        $submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Submitting...');
        $submitBtn.prop('disabled', true);

        var data = $f.serialize();
        $.post($f.attr('action'), data)
            .done(() => {
                Toastify({
                    text: "✓ Request submitted successfully!",
                    backgroundColor: "linear-gradient(135deg, #10b981, #059669)",
                    duration: 3000
                }).showToast();

                // Hide form and reset
                $('#newRequestForm').collapse('hide');
                $f[0].reset();

                setTimeout(() => location.reload(), 1500);
            })
            .fail(xhr => {
                Toastify({
                    text: "✗ Error: " + (xhr.responseText || "Failed to submit request"),
                    backgroundColor: "linear-gradient(135deg, #ef4444, #dc2626)",
                    duration: 5000
                }).showToast();
            })
            .always(() => {
                // Restore button state
                $submitBtn.html(originalText);
                $submitBtn.prop('disabled', false);
            });
    });

    // Enhanced details modal
    $(document).on("click", ".viewDetail", function() {
        var id = $(this).data("id");
        var detailBody = $("#detailBody");

        detailBody.html(`
            <div class="text-center py-5">
                <div class="loading-spinner"></div>
                <p class="mt-3 text-muted">Loading details...</p>
            </div>
        `);

        // Show modal immediately
        var modal = new bootstrap.Modal(document.getElementById('detailModal'));
        modal.show();

        // Build the proper URL to the User area action, then append ?id=
        var baseUrl = '@Url.Action("Details", "DriverTimeOff")';
        var url = baseUrl + "?id=" + id;

        $.get(url)
            .done(function(html) {
                detailBody.html(html);
            })
            .fail(function(xhr, status, err) {
                detailBody.html(`
                    <div class="text-center py-5">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Failed to Load Details</h5>
                        <p class="text-muted">Error ${xhr.status}: ${xhr.statusText}</p>
                        <button class="btn-modern btn-outline-modern" onclick="location.reload()">
                            <i class="fas fa-refresh"></i> Retry
                        </button>
                    </div>
                `);
            });
    });

    // Enhanced toast notifications
    document.addEventListener('DOMContentLoaded', function() {
