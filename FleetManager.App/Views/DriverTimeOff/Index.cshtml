        $('#newRequestForm').on('show.bs.collapse', function() {
            $(this).find('.form-container').css('transform', 'translateY(-20px)').css('opacity', '0');
        });

        $('#newRequestForm').on('shown.bs.collapse', function() {
            $(this).find('.form-container').animate({
                transform: 'translateY(0)',
                opacity: 1
            }, 300);
        });
    });
