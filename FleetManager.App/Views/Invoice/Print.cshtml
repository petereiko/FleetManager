@using FleetManager.Business.DataObjects.MaintenanceDto
@model MaintenanceTicketDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice #@Model.Invoice.Id - FleetGuard</title>
    <style>
        /* Reset and Base Styles - A4 PDF Optimized */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.4;
            color: #333;
            background-color: #ffffff;
            font-size: 12px;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        /* A4 Container - 210mm x 297mm */
        .invoice-container {
            width: 210mm;
            max-width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            background: white;
            position: relative;
            padding: 0;
        }

        /* Invoice Header Section - Compact for A4 */
        .invoice-header-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 20mm 15mm 15mm 15mm;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-bottom: 2px solid #667eea;
        }

        .company-info {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            flex: 1;
        }

        .company-logo {
            width: 50px;
            height: 50px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            font-weight: bold;
            flex-shrink: 0;
        }

        .company-details h2 {
            margin: 0 0 3px 0;
            color: #2c3e50;
            font-weight: 700;
            font-size: 24px;
        }

        .company-tagline {
            color: #6c757d;
            font-style: italic;
            margin-bottom: 8px;
            font-size: 11px;
        }

        .company-address p {
            margin: 1px 0;
            color: #495057;
            font-size: 10px;
            line-height: 1.3;
        }

        .invoice-info {
            text-align: right;
            min-width: 160px;
            flex-shrink: 0;
        }

        .invoice-number h3 {
            margin: 0;
            color: #2c3e50;
            font-size: 20px;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .invoice-id {
            color: #667eea;
            font-size: 14px;
            font-weight: 600;
            margin: 2px 0 12px 0;
        }

        .date-item {
            margin-bottom: 6px;
            font-size: 10px;
            line-height: 1.2;
        }

            .date-item strong {
                color: #2c3e50;
                display: inline-block;
                width: 70px;
            }

        .invoice-status-section {
            margin-top: 10px;
        }

        .invoice-status-badge {
            padding: 6px 12px;
            font-size: 9px;
            font-weight: 600;
            border-radius: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-block;
        }

        /* Status Badge Colors */
        .badge-status-Paid {
            background-color: #28a745;
            color: white;
        }

        .badge-status-Unpaid {
            background-color: #ffc107;
            color: #212529;
        }

        .badge-status-Overdue {
            background-color: #dc3545;
            color: white;
        }

        .badge-status-Cancelled {
            background-color: #6c757d;
            color: white;
        }

        /* Invoice Parties - Optimized spacing */
        .invoice-parties {
            display: flex;
            justify-content: space-between;
            padding: 15mm 15mm;
            border-bottom: 1px solid #e9ecef;
            background-color: #fefefe;
        }

            .invoice-parties h6 {
                color: #2c3e50;
                font-weight: 600;
                margin-bottom: 8px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 10px;
                border-bottom: 1px solid #667eea;
                padding-bottom: 3px;
                display: inline-block;
            }

        .client-info, .service-info {
            flex: 1;
        }

        .service-ref-section {
            margin-left: 20px;
        }

        .client-info p, .service-info p {
            margin: 4px 0;
            color: #495057;
            font-size: 10px;
            line-height: 1.3;
        }

        .client-name {
            font-weight: 600;
            color: #2c3e50;
            font-size: 12px;
        }

        .service-reference {
            background-color: #f8f9fa;
            padding: 6px;
            border-radius: 3px;
            margin-top: 6px;
        }

            .service-reference p {
                margin: 2px 0;
                font-size: 9px;
            }

        /* Invoice Items Table - A4 Optimized */
        .invoice-items-section {
            padding: 0 15mm;
        }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
            font-size: 10px;
        }

            .invoice-table thead {
                background: #2c3e50;
                color: white;
            }

            .invoice-table th {
                padding: 8px 6px;
                text-align: left;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 9px;
            }

            .invoice-table td {
                padding: 8px 6px;
                border-bottom: 1px solid #e9ecef;
                vertical-align: middle;
                font-size: 10px;
            }

            .invoice-table tbody tr:nth-child(even) {
                background-color: #f8f9fa;
            }

        .item-name {
            font-weight: 500;
            color: #2c3e50;
            font-size: 10px;
        }

        .category-tag {
            background: #e9ecef;
            color: #495057;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 8px;
            font-weight: 500;
            display: inline-block;
        }

        .item-quantity {
            text-align: center;
            font-weight: 600;
            color: #667eea;
            font-size: 10px;
        }

        .item-price, .item-total {
            text-align: right;
            font-weight: 600;
            color: #2c3e50;
            font-size: 10px;
        }

        /* Table Column Widths */
        .invoice-table th.item-description,
        .invoice-table td.item-description {
            width: 40%;
        }

        .invoice-table th.item-category,
        .invoice-table td.item-category {
            width: 20%;
        }

        .invoice-table th.item-quantity,
        .invoice-table td.item-quantity {
            width: 10%;
            text-align: center;
        }

        .invoice-table th.item-price,
        .invoice-table td.item-price {
            width: 15%;
            text-align: right;
        }

        .invoice-table th.item-total,
        .invoice-table td.item-total {
            width: 15%;
            text-align: right;
        }

        /* Invoice Totals - Compact */
        .invoice-totals {
            padding: 10mm 15mm;
            border-top: 2px solid #667eea;
        }

        .totals-section {
            max-width: 200px;
            margin-left: auto;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 4px 0;
            font-size: 11px;
        }

        .total-label {
            font-weight: 600;
            color: #495057;
        }

        .total-value {
            font-weight: 700;
            color: #2c3e50;
            min-width: 80px;
            text-align: right;
        }

        .subtotal {
            border-bottom: 1px solid #dee2e6;
        }

        .tax {
            border-bottom: 1px solid #dee2e6;
        }

        .grand-total {
            font-size: 13px;
            padding-top: 6px;
            margin-top: 4px;
            border-top: 2px solid #2c3e50;
        }

            .grand-total .total-value {
                color: #28a745;
                font-size: 14px;
                font-weight: 800;
            }

        /* Invoice Footer - Compact */
        .invoice-footer {
            display: flex;
            justify-content: space-between;
            padding: 15mm;
            border-top: 1px solid #e9ecef;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            margin-top: auto;
        }

        .payment-info {
            flex: 1;
        }

            .payment-info h6 {
                color: #2c3e50;
                font-weight: 600;
                margin-bottom: 8px;
                font-size: 10px;
                text-transform: uppercase;
                letter-spacing: 0.3px;
            }

            .payment-info p {
                margin: 3px 0;
                color: #495057;
                font-size: 9px;
                line-height: 1.3;
            }

        .thank-you {
            flex: 1;
            text-align: right;
            margin-left: 20px;
        }

            .thank-you p {
                margin: 3px 0;
                color: #495057;
                font-size: 9px;
                line-height: 1.3;
            }

            .thank-you strong {
                color: #2c3e50;
                font-size: 10px;
            }

        /* Invoice Watermark - Subtle */
        .invoice-watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            opacity: 0.02;
            font-size: 60px;
            font-weight: 900;
            color: #000;
            pointer-events: none;
            z-index: 0;
            white-space: nowrap;
        }

        .watermark-text {
            font-family: Arial, sans-serif;
            letter-spacing: 8px;
        }

        /* DinkToPdf A4 Specific Optimizations */
        @@media print {
            body

        {
            print-color-adjust: exact !important;
            -webkit-print-color-adjust: exact !important;
            color-adjust: exact !important;
        }

        .invoice-container {
            box-shadow: none;
            margin: 0;
            width: 210mm;
            max-width: 210mm;
            page-break-inside: avoid;
        }

        .invoice-header-section {
            break-inside: avoid;
            page-break-inside: avoid;
            background: #f8f9fa !important;
            -webkit-print-color-adjust: exact !important;
        }

        .invoice-parties {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        .invoice-items-section {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        .invoice-totals {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        .invoice-footer {
            break-inside: avoid;
            page-break-inside: avoid;
            background: #f8f9fa !important;
            -webkit-print-color-adjust: exact !important;
        }

        .invoice-table thead {
            background: #2c3e50 !important;
            color: white !important;
            -webkit-print-color-adjust: exact !important;
        }

        .category-tag {
            background: #e9ecef !important;
            -webkit-print-color-adjust: exact !important;
        }

        .invoice-status-badge {
            -webkit-print-color-adjust: exact !important;
        }

        .invoice-table tbody tr:nth-child(even) {
            background-color: #f8f9fa !important;
            -webkit-print-color-adjust: exact !important;
        }

        }

        /* Responsive adjustments for smaller content */
        .compact-spacing {
            margin: 2px 0;
        }

        /* Ensure content fits in A4 */
        .content-wrapper {
            max-height: 250mm;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="content-wrapper">
            <!-- Invoice Header -->
            <div class="invoice-header-section">
                <div class="company-info">
                    <div class="company-logo">
                        FG
                    </div>
                    <div class="company-details">
                        <h2>FleetGuard</h2>
                        <p class="company-tagline">Professional Fleet Management Solutions</p>
                        <div class="company-address">
                            <p><strong>123 Fleet Street, Victoria Island</strong></p>
                            <p>Lagos, Nigeria</p>
                            <p><strong>Phone:</strong> +234 (0) 123 456 7890</p>
                            <p><strong>Email:</strong> billing@fleetguard.ng</p>
                        </div>
                    </div>
                </div>
                <div class="invoice-info">
                    <div class="invoice-number">
                        <h3>INVOICE</h3>
                        <p class="invoice-id">#@Model.Invoice.Id</p>
                    </div>
                    <div class="invoice-dates">
                        <div class="date-item">
                            <strong>Date:</strong>
                            <span>@Model.Invoice.InvoiceDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="date-item">
                            <strong>Due:</strong>
                            <span>@Model.Invoice.InvoiceDate.AddDays(30).ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="date-item">
                            <strong>Terms:</strong>
                            <span>Net 30</span>
                        </div>
                    </div>
                    <div class="invoice-status-section">
                        <span class="badge-status-@Model.Invoice.Status invoice-status-badge">
                            @Model.Invoice.Status
                        </span>
                    </div>
                </div>
            </div>

            <!-- Bill To / Service Details -->
            <div class="invoice-parties">
                <div class="bill-to-section">
                    <h6>Bill From:</h6>
                    <div class="client-info">
                        <p class="client-name">@Model.DriverName</p>
                        <p>Driver ID: @Model.DriverId</p>
                        <p>Vehicle: @Model.VehicleDescription</p>
                        <div class="service-reference">
                            <p><strong>Dept:</strong> Fleet Operations</p>
                        </div>
                    </div>
                </div>
                <div class="service-ref-section">
                    <h6>Service Reference:</h6>
                    <div class="service-info">
                        <p><strong>Ticket:</strong> #@Model.Id</p>
                        <p><strong>Date:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        <p><strong>Subject:</strong> @Model.Subject</p>
                        <p><strong>Priority:</strong> @Model.Priority</p>
                        <div class="service-reference">
                            <p><strong>Location:</strong> Main Service Bay</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Invoice Items Table -->
            <div class="invoice-items-section">
                <table class="invoice-table">
                    <thead>
                        <tr>
                            <th class="item-description">Description</th>
                            <th class="item-category">Category</th>
                            <th class="item-quantity">Qty</th>
                            <th class="item-price">Unit Price (₦)</th>
                            <th class="item-total">Amount (₦)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Invoice.Items)
                        {
                            <tr>
                                <td class="item-description">
                                    <span class="item-name">@item.PartName</span>
                                </td>
                                <td class="item-category">
                                    <span class="category-tag">@item.PartCategory</span>
                                </td>
                                <td class="item-quantity">@item.Quantity</td>
                                <td class="item-price">@item.UnitPrice.ToString("N2")</td>
                                <td class="item-total">@item.LineTotal.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Invoice Totals -->
            <div class="invoice-totals">
                <div class="totals-section">
                    <div class="total-row subtotal">
                        <span class="total-label">Subtotal:</span>
                        <span class="total-value">₦@Model.Invoice.Items.Sum(x => x.LineTotal).ToString("N2")</span>
                    </div>
                    <div class="total-row tax">
                        <span class="total-label">VAT (7.5%):</span>
                        <span class="total-value">₦@((Model.Invoice.Items.Sum(x => x.LineTotal) * 0.075m).ToString("N2"))</span>
                    </div>
                    <div class="total-row grand-total">
                        <span class="total-label">Total Due:</span>
                        <span class="total-value">₦@((Model.Invoice.Items.Sum(x => x.LineTotal) * 1.075m).ToString("N2"))</span>
                    </div>
                </div>
            </div>

            <!-- Invoice Footer -->
            <div class="invoice-footer">
                <div class="payment-info">
                    <h6>Payment Information:</h6>
                    <p><strong>Bank:</strong> First Bank of Nigeria</p>
                    <p><strong>Account:</strong> FleetGuard Services Ltd</p>
                    <p><strong>Number:</strong> 3012345678</p>
                    <p><strong>Sort Code:</strong> 011</p>
                    <p><em>Reference: Invoice #@Model.Invoice.Id</em></p>
                </div>
                <div class="thank-you">
                    <p><strong>Thank you for your business!</strong></p>
                    <p>For questions regarding this invoice,</p>
                    <p>contact our billing department.</p>
                    <br>
                    <p><strong>FleetGuard Services</strong></p>
                    <p>Your Trusted Fleet Partner</p>
                </div>
            </div>
        </div>

        <!-- Invoice Watermark -->
        <div class="invoice-watermark">
            <span class="watermark-text">FLEETGUARD</span>
        </div>
    </div>
</body>
</html>