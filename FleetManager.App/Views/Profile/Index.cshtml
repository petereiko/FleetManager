<div class="driver-profile-container">
    <!-- License Status Alert -->
    @{
        var daysUntilExpiry = Model.LicenseExpiryDate.HasValue ?
        (Model.LicenseExpiryDate.Value - DateTime.Now).TotalDays : 0;
    }

    @if (Model.LicenseExpiryDate.HasValue)
    {
        @if (daysUntilExpiry <= 0)
        {
            <div class="license-alert license-danger">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>License Expired:</strong> This driver's license expired on @Model.LicenseExpiryDate.Value.ToString("MM/dd/yyyy").
            </div>
        }
        else if (daysUntilExpiry <= 30)
        {
            <div class="license-alert license-warning">
                <i class="fas fa-exclamation-circle"></i>
                <strong>License Expiring Soon:</strong> This driver's license expires in @Math.Ceiling(daysUntilExpiry) days.
            </div>
        }
        else
        {
            <div class="license-alert license-valid">
                <i class="fas fa-check-circle"></i>
                <strong>License Valid:</strong> Expires on @Model.LicenseExpiryDate.Value.ToString("MM/dd/yyyy").
            </div>
        }
    }

    <!-- Profile Header -->
    <div class="profile-header">
        <div class="header-content">
            <div class="profile-photo-container">
                <img src="@Model.PassportFileName" alt="@Model.FullName" class="profile-photo"
                     onerror="this.src='data:image/svg+xml;base64,'" />
                <div class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")"></div>
            </div>
            <div class="header-info">
                <h1>@Model.FullName</h1>
                <div class="header-meta">
                    <div class="meta-item">
                        <i class="fas fa-envelope"></i>
                        @Model.Email
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-phone"></i>
                        @Model.PhoneNumber
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-id-card"></i>
                        @Model.LicenseNumber
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-calendar"></i>
                        Joined @Model.CreatedDate.ToString("MMM yyyy")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <div class="main-content">
            <!-- Personal Information -->
            <div class="info-card">
                <div class="card-title">
                    <i class="fas fa-user"></i>
                    Personal Information
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Full Name</div>
                        <div class="info-value">@Model.FullName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Date of Birth</div>
                        <div class="info-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Gender</div>
                        <div class="info-value">@Model.Gender</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Address</div>
                        <div class="info-value">@Model.Address</div>
                    </div>
                </div>
            </div>

            <!-- License Information -->
            <div class="info-card">
                <div class="card-title">
                    <i class="fas fa-id-badge"></i>
                    License Information
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">License Number</div>
                        <div class="info-value">@Model.LicenseNumber</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Category</div>
                        <div class="info-value">@Model.LicenseCategory</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Expiry Date</div>
                        <div class="info-value">@(Model.LicenseExpiryDate?.ToString("MMMM dd, yyyy") ?? "Not specified")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Status</div>
                        <div class="info-value">
                            @if (Model.LicenseExpiryDate.HasValue && daysUntilExpiry <= 0)
                            {
                                <span style="color: #dc3545;">Expired</span>
                            }
                            else if (Model.LicenseExpiryDate.HasValue && daysUntilExpiry <= 30)
                            {
                                <span style="color: #ffc107;">Expiring Soon</span>
                            }
                            else
                            {
                                <span style="color: #28a745;">Valid</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employment Information -->
            <div class="info-card">
                <div class="card-title">
                    <i class="fas fa-briefcase"></i>
                    Employment Information
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Employment Status</div>
                        <div class="info-value">@Model.EmploymentStatus</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Company Branch ID</div>
                        <div class="info-value">@Model.CompanyBranchId</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Shift Status</div>
                        <div class="info-value">@Model.ShiftStatus</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Account Status</div>
                        <div class="info-value">
                            <span style="color: @(Model.IsActive ? "#28a745" : "#dc3545");">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidebar">
            <!-- Quick Stats -->
            <div class="quick-stats">
                <div class="card-title" style="color: white; border-color: rgba(255,255,255,0.3);">
                    <i class="fas fa-chart-line"></i>
                    Quick Stats
                </div>
                <div class="stat-item">
                    <span>Account Age</span>
                    <strong>@((DateTime.Now - Model.CreatedDate).Days) days</strong>
                </div>
                <div class="stat-item">
                    <span>Documents</span>
                    <strong>@Model.DriverDocuments.Count()</strong>
                </div>
                <div class="stat-item">
                    <span>License Valid</span>
                    <strong>@(Model.LicenseExpiryDate.HasValue && daysUntilExpiry > 0 ? "Yes" : "No")</strong>
                </div>
            </div>

            <!-- Contact Card -->
            <div class="info-card">
                <div class="card-title">
                    <i class="fas fa-address-book"></i>
                    Contact Details
                </div>
                <div class="info-item" style="margin-bottom: 15px;">
                    <div class="info-label">Email</div>
                    <div class="info-value">
                        <a href="mailto:@Model.Email" style="color: #667eea; text-decoration: none;">
                            @Model.Email
                        </a>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Phone</div>
                    <div class="info-value">
                        <a href="tel:@Model.PhoneNumber" style="color: #667eea; text-decoration: none;">
                            @Model.PhoneNumber
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Documents Section -->
    <div class="info-card documents-section">
        <div class="card-title">
            <i class="fas fa-folder-open"></i>
            Driver Documents (@Model.DriverDocuments.Count())
        </div>

        @if (Model.DriverDocuments.Any())
        {
            <div class="documents-grid">
                @foreach (var doc in Model.DriverDocuments)
                {
                    <div class="document-card">
                        @if (doc.FileName.EndsWith(".jpg") || doc.FileName.EndsWith(".jpeg") ||
                                        doc.FileName.EndsWith(".png") || doc.FileName.EndsWith(".gif"))
                        {
                            <img src="@doc.FileName" alt="@doc.FileName" class="document-image"
                                 onerror="this.parentElement.innerHTML='<div class=\'no-image-placeholder\'><i class=\'fas fa-file-image fa-2x\'></i><br>Image not found</div>'" />
                        }
                        else
                        {
                            <div class="no-image-placeholder">
                                <div style="text-align: center;">
                                    <i class="fas fa-file-alt fa-2x"></i>
                                    <br>Document File
                                </div>
                            </div>
                        }
                        <div class="document-info">
                            <div class="document-name">@doc.FileName</div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 40px; color: #6c757d;">
                <i class="fas fa-folder-open fa-3x" style="margin-bottom: 15px;"></i>
