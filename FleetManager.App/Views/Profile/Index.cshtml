<div class="profile-container">
    <!-- Hero Section -->
    <div class="profile-hero">
        <div class="hero-content">
            <div class="avatar-section">
                <div class="avatar-container">
                    <img src="@Model.PassportFileName" alt="@Model.FullName" class="avatar"
                         onerror="this.src='data:image/svg+xml;base64,'" />
                    <div class="status-indicator @(Model.IsActive ? "status-active" : "status-inactive")"></div>
                </div>
            </div>
            <div class="hero-info">
                <h1 class="hero-name">@Model.FullName</h1>
                <p class="hero-subtitle">@Model.EmploymentStatus • @Model.LicenseCategory License</p>
                <div class="hero-badges">
                    <div class="badge">
                        <i class="fas fa-envelope"></i>
                        @Model.Email
                    </div>
                    <div class="badge">
                        <i class="fas fa-phone"></i>
                        @Model.PhoneNumber
                    </div>
                    <div class="badge">
                        <i class="fas fa-calendar"></i>
                        Joined @Model.CreatedDate.ToString("MMM yyyy")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <!-- Tabs -->
        <div class="tabs-container">
            <div class="tabs">
                <button class="tab active" onclick="switchTab(event, 'personal')">
                    <i class="fas fa-user"></i> Personal Info
                </button>
                <button class="tab" onclick="switchTab(event, 'license')">
                    <i class="fas fa-id-card"></i> License Details
                </button>
                <button class="tab" onclick="switchTab(event, 'employment')">
                    <i class="fas fa-briefcase"></i> Employment
                </button>
                <button class="tab" onclick="switchTab(event, 'documents')">
                    <i class="fas fa-folder"></i> Documents (@Model.DriverDocuments.Count())
                </button>
            </div>

            <!-- Personal Info Tab -->
            <div id="personal" class="tab-content active">
                <div class="info-grid">
                    <div class="info-card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <h3 class="card-title">Basic Information</h3>
                        </div>
                        <div class="field-group">
                            <div class="field">
                                <div class="field-label">Full Name</div>
                                <div class="field-value">@Model.FullName</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Date of Birth</div>
                                <div class="field-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Gender</div>
                                <div class="field-value">@Model.Gender</div>
                            </div>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <h3 class="card-title">Contact Information</h3>
                        </div>
                        <div class="field-group">
                            <div class="field">
                                <div class="field-label">Email Address</div>
                                <div class="field-value">@Model.Email</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Phone Number</div>
                                <div class="field-value">@Model.PhoneNumber</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Address</div>
                                <div class="field-value">@Model.Address</div>
                            </div>
                        </div>
                        <div class="contact-actions">
                            <a href="mailto:@Model.Email" class="action-btn btn-primary">
                                <i class="fas fa-envelope"></i>
                                Send Email
                            </a>
                            <a href="tel:@Model.PhoneNumber" class="action-btn btn-secondary">
                                <i class="fas fa-phone"></i>
                                Call Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- License Details Tab -->
            <div id="license" class="tab-content">
                <div class="info-grid">
                    <div class="info-card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <h3 class="card-title">License Information</h3>
                        </div>
                        <div class="field-group">
                            <div class="field">
                                <div class="field-label">License Number</div>
                                <div class="field-value">@Model.LicenseNumber</div>
                            </div>
                            <div class="field">
                                <div class="field-label">License Category</div>
                                <div class="field-value">@Model.LicenseCategory</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Expiry Date</div>
                                <div class="field-value">@(Model.LicenseExpiryDate?.ToString("MMMM dd, yyyy") ?? "Not specified")</div>
                            </div>
                            <div class="field">
                                <div class="field-label">License Status</div>
                                <div class="field-value">
                                    @{
                                        var daysUntilExpiry = Model.LicenseExpiryDate.HasValue ?
                                        (Model.LicenseExpiryDate.Value - DateTime.Now).TotalDays : 0;

                                        string statusClass = "status-valid";
                                        string statusText = "Valid";
                                        string statusIcon = "fa-check-circle";

                                        if (Model.LicenseExpiryDate.HasValue && daysUntilExpiry <= 0)
                                        {
                                            statusClass = "status-expired";
                                            statusText = "Expired";
                                            statusIcon = "fa-times-circle";
                                        }
                                        else if (Model.LicenseExpiryDate.HasValue && daysUntilExpiry <= 30)
                                        {
                                            statusClass = "status-warning";
                                            statusText = $"Expires in {Math.Ceiling(daysUntilExpiry)} days";
                                            statusIcon = "fa-exclamation-circle";
                                        }
                                    }
                                    <span class="license-status @statusClass">
                                        <i class="fas @statusIcon"></i>
                                        @statusText
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employment Tab -->
            <div id="employment" class="tab-content">
                <div class="info-grid">
                    <div class="info-card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-briefcase"></i>
                            </div>
                            <h3 class="card-title">Employment Details</h3>
                        </div>
                        <div class="field-group">
                            <div class="field">
                                <div class="field-label">Employment Status</div>
                                <div class="field-value">@Model.EmploymentStatus</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Company Branch ID</div>
                                <div class="field-value">#@Model.CompanyBranchId</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Shift Status</div>
                                <div class="field-value">@Model.ShiftStatus</div>
                            </div>
                            <div class="field">
                                <div class="field-label">Account Status</div>
                                <div class="field-value">
                                    <span class="license-status @(Model.IsActive ? "status-valid" : "status-expired")">
                                        <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-times-circle")"></i>
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="field-label">Account Created</div>
                                <div class="field-value">@Model.CreatedDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents Tab -->
            <div id="documents" class="tab-content">
                @if (Model.DriverDocuments.Any())
                {
                    <div class="documents-gallery">
                        @foreach (var doc in Model.DriverDocuments)
                        {
                            <div class="document-item">
                                <div class="document-preview">
                                    @if (doc.FileName.EndsWith(".jpg") || doc.FileName.EndsWith(".jpeg") ||
                                                                doc.FileName.EndsWith(".png") || doc.FileName.EndsWith(".gif"))
                                    {
                                        <img src="@doc.FileName" alt="@doc.FileName" class="document-image"
                                             onerror="this.parentElement.innerHTML='<i class=\'fas fa-file-image document-placeholder\'></i>'" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-file-alt document-placeholder"></i>
                                    }
                                </div>
                                <div class="document-info">
                                    <div class="document-name">@doc.FileName</div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-folder-open empty-icon"></i>
                        <h3>No Documents Available</h3>
                        <p>No documents have been uploaded for this driver yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function switchTab(event, tabName) {
        // Hide all tab contents
        const tabContents = document.querySelectorAll('.tab-content');
        tabContents.forEach(content => {
            content.classList.remove('active');
        });

        // Remove active class from all tabs
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => {
            tab.classList.remove('active');
        });

        // Show selected tab content and mark tab as active
        document.getElementById(tabName).classList.add('active');
        event.currentTarget.classList.add('active');
    }

    // Add smooth scroll behavior and interactive elements
    document.addEventListener('DOMContentLoaded', function() {
        // Add click handlers for contact actions
        const emailBtn = document.querySelector('a[href^="mailto:"]');
        const phoneBtn = document.querySelector('a[href^="tel:"]');

        if (emailBtn) {
            emailBtn.addEventListener('click', function(e) {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        }

        if (phoneBtn) {
            phoneBtn.addEventListener('click', function(e) {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        }
    });
</script>