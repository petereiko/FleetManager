    window.addEventListener('resize', () => {
        if (map && routeBounds) {
            google.maps.event.trigger(map, 'resize');
            map.fitBounds(routeBounds);
        }
        if (streetViewPanorama) {
            google.maps.event.trigger(streetViewPanorama, 'resize');
